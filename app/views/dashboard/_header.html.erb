<div class="flex flex-wrap items-center justify-between gap-4">
  <div>
    <h1 class="text-2xl font-semibold text-white"><%= t("dashboard.header_title") %></h1>
    <p class="text-sm text-slate-400"><%= t("dashboard.header_subtitle") %></p>
  </div>
  <div class="flex flex-wrap items-center gap-2">
    <% if policy(Task).create? %>
      <%= link_to t("dashboard.new_task"), new_task_path,
            class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300" %>
    <% end %>
  </div>
</div>
