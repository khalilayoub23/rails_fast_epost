<% card_class = "rounded-2xl border border-white/10 bg-slate-900/70 backdrop-blur px-6 py-5 shadow-lg shadow-black/30 min-w-0" %>
<% stack_text = rtl? ? 'text-right' : 'text-left' %>

<div class="space-y-6">
  <% kpi_locals = {
    card1_value: @tasks_count,
    card1_label: t("dashboard.total_tasks", default: "Tasks"),
    card2_value: @pending_tasks.size,
    card2_label: t("dashboard.pending_tasks", default: "Pending"),
    card3_value: @deliveries_count,
    card3_label: t("dashboard.total_deliveries", default: "Deliveries"),
    card4_value: @recent_tasks.count,
    card4_label: t("dashboard.recent_activity", default: "Recent activity"),
    card4_currency: false
  } %>

  <%= render partial: "dashboard/kpis", locals: kpi_locals %>

  <div class="grid gap-6 xl:grid-cols-2">
    <section class="<%= card_class %>">
      <div class="flex items-center justify-between gap-3 <%= rtl? ? 'flex-row-reverse text-right' : '' %>">
        <div>
          <p class="text-xs uppercase tracking-[0.2em] text-slate-400"><%= t("dashboard.operations", default: "Operations") %></p>
          <h3 class="text-lg font-semibold text-white"><%= t("dashboard.recent_tasks", default: "Tasks") %></h3>
        </div>
        <%= link_to t("dashboard.view_all", default: "View all"), tasks_path, class: "inline-flex items-center gap-1 rounded-full bg-white/5 px-3 py-1 text-xs font-semibold text-amber-200 ring-1 ring-white/10 hover:ring-amber-300" %>
      </div>

      <%= form_with url: dashboard_path, method: :get, scope: :task_filter, local: true, class: "mt-4 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-4" do |f| %>
        <div>
          <%= f.label :status, t("dashboard.status", default: "Status"), class: "text-xs text-gray-400" %>
          <%= f.select :status, options_for_select(@task_statuses.map { |s| [s.titleize, s] }, @task_filters[:status]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div>
          <%= f.label :carrier_id, t("dashboard.carrier", default: "Carrier"), class: "text-xs text-gray-400" %>
          <%= f.select :carrier_id, options_from_collection_for_select(@carrier_options, :id, :name, @task_filters[:carrier_id]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div>
          <%= f.label :sender_id, t("dashboard.sender", default: "Sender"), class: "text-xs text-gray-400" %>
          <%= f.select :sender_id, options_from_collection_for_select(@sender_options, :id, :full_name, @task_filters[:sender_id]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div class="flex items-end <%= rtl? ? 'justify-start' : 'justify-end' %>">
          <%= f.submit t("dashboard.apply_filters", default: "Apply filters"), class: "inline-flex items-center justify-center gap-2 rounded-lg bg-amber-400 px-4 py-2 text-sm font-semibold text-slate-900 shadow hover:bg-amber-300" %>
        </div>
      <% end %>

      <div class="mt-4 grid grid-cols-1 gap-3">
        <% @recent_tasks.each do |task| %>
          <div class="flex items-center justify-between gap-3 rounded-xl border border-white/5 bg-white/5 px-4 py-3">
            <div class="<%= stack_text %>">
              <p class="text-sm font-semibold text-white"><%= link_to(task.title.presence || "Task ##{task.id}", task_path(task), class: "hover:text-amber-200") %></p>
              <p class="text-xs text-slate-400"><%= task.status %> • <%= task.carrier&.name || t("dashboard.no_carrier", default: "No carrier") %></p>
            </div>
            <%= render "shared/status_badge", status: task.status %>
          </div>
        <% end %>
      </div>
    </section>

    <section class="<%= card_class %>">
      <div class="flex items-center justify-between gap-3 <%= rtl? ? 'flex-row-reverse text-right' : '' %>">
        <div>
          <p class="text-xs uppercase tracking-[0.2em] text-slate-400"><%= t("dashboard.logistics", default: "Logistics") %></p>
          <h3 class="text-lg font-semibold text-white"><%= t("deliveries.index.title", default: "Deliveries") %></h3>
        </div>
        <%= link_to t("dashboard.view_all", default: "View all"), deliveries_path, class: "inline-flex items-center gap-1 rounded-full bg-white/5 px-3 py-1 text-xs font-semibold text-amber-200 ring-1 ring-white/10 hover:ring-amber-300" %>
      </div>

      <%= form_with url: dashboard_path, method: :get, scope: :delivery_filter, local: true, class: "mt-4 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-5" do |f| %>
        <div>
          <%= f.label :status, t("dashboard.status", default: "Status"), class: "text-xs text-gray-400" %>
          <%= f.select :status, options_for_select(@delivery_statuses.map { |s| [s.titleize, s] }, @delivery_filters[:status]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div>
          <%= f.label :courier_id, t("dashboard.courier", default: "Courier"), class: "text-xs text-gray-400" %>
          <%= f.select :courier_id, options_from_collection_for_select(@courier_options, :id, :full_name, @delivery_filters[:courier_id]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div>
          <%= f.label :sender_id, t("dashboard.sender", default: "Sender"), class: "text-xs text-gray-400" %>
          <%= f.select :sender_id, options_from_collection_for_select(@sender_options, :id, :full_name, @delivery_filters[:sender_id]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div>
          <%= f.label :recipient_id, t("dashboard.recipient", default: "Recipient"), class: "text-xs text-gray-400" %>
          <%= f.select :recipient_id, options_from_collection_for_select(@recipient_options, :id, :full_name, @delivery_filters[:recipient_id]), include_blank: true, class: "mt-1 w-full rounded-lg border border-white/10 bg-slate-900/80 px-3 py-2 text-sm text-white shadow-inner shadow-black/20" %>
        </div>
        <div class="flex items-end <%= rtl? ? 'justify-start' : 'justify-end' %>">
          <%= f.submit t("dashboard.apply_filters", default: "Apply filters"), class: "inline-flex items-center justify-center gap-2 rounded-lg bg-amber-400 px-4 py-2 text-sm font-semibold text-slate-900 shadow hover:bg-amber-300" %>
        </div>
      <% end %>

      <div class="mt-4 grid grid-cols-1 gap-3">
        <% @delivery_samples.each do |delivery| %>
          <div class="flex items-center justify-between gap-3 rounded-xl border border-white/5 bg-white/5 px-4 py-3">
            <div class="<%= stack_text %>">
              <p class="text-sm font-semibold text-white"><%= link_to("Case #{delivery.case_number}", delivery_path(delivery), class: "hover:text-amber-200") %></p>
              <p class="text-xs text-slate-400"><%= delivery.status %> • <%= delivery.courier.full_name %></p>
            </div>
            <span class="rounded-full bg-slate-800 px-3 py-1 text-xs font-semibold text-amber-200 ring-1 ring-white/10"><%= delivery.status.humanize %></span>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
