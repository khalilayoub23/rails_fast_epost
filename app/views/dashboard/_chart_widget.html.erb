<div data-widget-id="chart"
     data-span="<%= span %>"
     class="<%= span %> <%= card_class %> px-5 pb-5 pt-7.5 sm:px-7.5"
     data-controller="charts"
     data-charts-series-a-value='<%= (series_a || {}).to_json %>'
  data-charts-series-b-value='<%= (series_b || {}).to_json %>'
  data-charts-labels-value='<%= (labels || {}).to_json %>'
  data-charts-currency-value="<%= currency_code %>"
  data-charts-empty-text-value="<%= t('dashboard.no_chart_data', default: 'No data for this period yet.') %>">
  <div class="flex flex-wrap items-start justify-between gap-3 sm:flex-nowrap <%= rtl? ? 'flex-row-reverse text-right' : '' %>">
    <div class="flex w-full flex-wrap gap-3 sm:gap-5 <%= rtl? ? 'flex-row-reverse' : '' %>">
      <div class="flex min-w-47.5 <%= rtl? ? 'flex-row-reverse' : '' %>">
        <span class="mr-2 mt-1 flex h-4 w-full max-w-4 items-center justify-center rounded-full border border-yellow-400">
          <span class="block h-2.5 w-full max-w-2.5 rounded-full bg-yellow-400"></span>
        </span>
        <div class="w-full">
          <p class="font-semibold text-yellow-400"><%= t("dashboard.total_revenue", default: "Revenue") %></p>
          <p class="text-sm text-slate-300" data-charts-target="seriesAValue">—</p>
        </div>
      </div>
      <div class="flex min-w-47.5 <%= rtl? ? 'flex-row-reverse' : '' %>">
        <span class="mr-2 mt-1 flex h-4 w-full max-w-4 items-center justify-center rounded-full border border-blue-400">
          <span class="block h-2.5 w-full max-w-2.5 rounded-full bg-blue-400"></span>
        </span>
        <div class="w-full">
          <p class="font-semibold text-blue-400"><%= t("dashboard.tasks_created", default: "Tasks Created") %></p>
          <p class="text-sm text-slate-300" data-charts-target="seriesBValue">—</p>
        </div>
      </div>
    </div>
    <div class="flex w-full max-w-45 <%= rtl? ? 'justify-start' : 'justify-end' %>">
      <div class="inline-flex items-center rounded-lg bg-white/10 p-1.5">
        <button data-action="click->charts#update" data-charts-period-param="day" class="px-3 py-1 text-xs font-medium text-slate-300 hover:bg-white/10 hover:text-white rounded transition-colors">
          <%= t("dashboard.day", default: "Day") %>
        </button>
        <button data-action="click->charts#update" data-charts-period-param="week" class="px-3 py-1 text-xs font-medium text-slate-300 hover:bg-white/10 hover:text-white rounded transition-colors">
          <%= t("dashboard.week", default: "Week") %>
        </button>
        <button data-action="click->charts#update" data-charts-period-param="month" class="rounded bg-yellow-400 px-3 py-1 text-xs font-medium text-black shadow-lg hover:bg-yellow-500 transition-colors">
          <%= t("dashboard.month", default: "Month") %>
        </button>
      </div>
    </div>
  </div>

  <div>
    <div id="chartOne" class="<%= rtl? ? '-mr-5' : '-ml-5' %>" data-charts-target="chartContainer"></div>
  </div>
</div>
