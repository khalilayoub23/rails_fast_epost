<div class="space-y-6">
  <% kpi_locals = {
    card1_value: @payments_count,
    card1_label: t("dashboard.total_payments", default: "My payments"),
    card2_value: @pending_payments.size,
    card2_label: t("dashboard.pending_orders", default: "Pending"),
    card3_value: @tasks_count,
    card3_label: t("dashboard.total_tasks", default: "My tasks"),
    card4_value: @total_spend_cents,
    card4_label: t("dashboard.total_spend", default: "Total spend"),
    card4_currency: true
  } %>

  <%= render partial: "dashboard/kpis", locals: kpi_locals %>

  <div class="grid gap-6 xl:grid-cols-2">
    <% Rails.logger.info("[Dashboard Sender] about to render section_wrapper" ) %>
    <%= render layout: "dashboard/section_wrapper", locals: {
      title_key: "dashboard.recent_payments",
      title_default: "Recent payments",
      subtitle_key: "dashboard.financials",
      subtitle_default: "Financials",
      link_path: payments_path,
      link_label_key: "dashboard.view_all",
      link_label_default: "View all"
    } do %>
      <p class="text-sm text-slate-400"><%= t("dashboard.no_payments", default: "No payments yet.") %></p>
    <% end %>
  </div>
</div>
