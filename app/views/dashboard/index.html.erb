<h1 class="text-xl font-semibold mb-4">Dashboard</h1>

<div class="grid md:grid-cols-3 gap-6">
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Payments</div>
    <div class="text-2xl font-bold"><%= @payments_count %></div>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Pending payments</div>
    <div class="text-2xl font-bold"><%= @pending_payments.size %></div>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Recent tasks</div>
    <div class="text-2xl font-bold"><%= @recent_tasks.size %></div>
  </div>
  
</div>

<div class="grid md:grid-cols-2 gap-6 mt-6">
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500 mb-2">Pending payments</div>
    <ul class="space-y-1">
      <% @pending_payments.each do |p| %>
        <li>
          <%= link_to "##{p.id} #{p.provider.to_s.upcase}", payment_path(p), class: "text-blue-600 hover:underline" %>
          <span class="ml-2"><%= render "shared/status_badge", status: p.gateway_status %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500 mb-2">Recent tasks</div>
    <ul class="space-y-1">
      <% @recent_tasks.each do |t| %>
        <li><%= link_to "Task ##{t.id}", t, class: "text-blue-600 hover:underline" %></li>
      <% end %>
    </ul>
  </div>
</div>
