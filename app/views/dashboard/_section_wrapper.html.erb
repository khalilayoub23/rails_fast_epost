<% card_class = "rounded-2xl border border-white/10 bg-slate-900/70 backdrop-blur px-6 py-5 shadow-lg shadow-black/30 min-w-0" %>
<% title_text = title_key.present? ? t(title_key, default: title_default) : (title || title_default) %>
<% subtitle_text = subtitle_key.present? ? t(subtitle_key, default: subtitle_default) : (subtitle || subtitle_default) %>
<% link_label_text = link_label_key.present? ? t(link_label_key, default: link_label_default) : (link_label || link_label_default) %>
<section class="<%= card_class %>">
  <div class="flex items-center justify-between gap-3 <%= rtl? ? 'flex-row-reverse text-right' : '' %>">
    <div>
      <p class="text-xs uppercase tracking-[0.2em] text-slate-400"><%= subtitle_text %></p>
      <h3 class="text-lg font-semibold text-white"><%= title_text %></h3>
    </div>
    <% if link_path %>
      <%= link_to link_label_text, link_path, class: "inline-flex items-center gap-1 rounded-full bg-white/5 px-3 py-1 text-xs font-semibold text-amber-200 ring-1 ring-white/10 hover:ring-amber-300" %>
    <% end %>
  </div>
  <div class="mt-4">
    <%= yield %>
  </div>
</section>
