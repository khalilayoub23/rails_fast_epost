<div class="rounded-2xl border border-white/10 bg-white/5 p-4">
  <div class="mb-3 flex items-center justify-between">
    <p class="text-sm font-semibold text-white"><%= t("dashboard.filters.title") %></p>
    <%= link_to t("dashboard.filters.reset"), dashboard_path, class: "text-xs text-slate-300 hover:text-white" %>
  </div>
  <%= form_with url: dashboard_path, method: :get, local: true, class: "grid gap-3 sm:grid-cols-2 lg:grid-cols-4" do %>
    <% if %w[admin manager].include?(dashboard_view) %>
      <div>
        <label class="block text-xs font-semibold text-slate-400 mb-1"><%= t("dashboard.filters.payment_status") %></label>
        <%= select_tag "payment_filter[status]",
            options_for_select([ [t("dashboard.filters.all"), ""] ] + (payment_statuses || Payment.gateway_statuses.keys).map { |s| [s.titleize, s] }, payment_filters&.[](:status)),
            class: "w-full rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-sm text-white" %>
      </div>
    <% end %>

    <div>
      <label class="block text-xs font-semibold text-slate-400 mb-1"><%= t("dashboard.filters.task_status") %></label>
      <%= select_tag "task_filter[status]",
          options_for_select([ [t("dashboard.filters.all"), ""] ] + (task_statuses || Task.statuses.keys).map { |s| [s.titleize, s] }, task_filters&.[](:status)),
          class: "w-full rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-sm text-white" %>
    </div>

    <div>
      <label class="block text-xs font-semibold text-slate-400 mb-1"><%= t("dashboard.filters.delivery_status") %></label>
      <%= select_tag "delivery_filter[status]",
          options_for_select([ [t("dashboard.filters.all"), ""] ] + (delivery_statuses || Delivery.statuses.keys).map { |s| [s.titleize, s] }, delivery_filters&.[](:status)),
          class: "w-full rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-sm text-white" %>
    </div>

    <div class="flex items-end">
      <%= submit_tag t("dashboard.filters.apply"), class: "inline-flex w-full items-center justify-center rounded-lg bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300" %>
    </div>
  <% end %>
</div>
