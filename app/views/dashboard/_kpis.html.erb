<div class="grid md:grid-cols-4 gap-6" id="dashboard_kpis">
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Payments</div>
    <div class="text-2xl font-bold"><%= @payments_count %></div>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Pending payments</div>
    <div class="text-2xl font-bold"><%= @pending_payments.size %></div>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Revenue (succeeded)</div>
    <div class="text-2xl font-bold"><%= number_to_currency(@revenue_total_cents / 100.0) %></div>
  </div>
  <div class="bg-white border rounded p-4">
    <div class="text-sm text-gray-500">Refunds total</div>
    <div class="text-2xl font-bold text-blue-700"><%= number_to_currency(@refunds_total_cents / 100.0) %></div>
  </div>
</div>
