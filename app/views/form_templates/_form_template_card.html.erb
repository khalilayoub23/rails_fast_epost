<%= turbo_frame_tag form_template do %>
  <tr class="border-b border-stroke dark:border-dark-3 hover:bg-gray-1 dark:hover:bg-dark-2 transition-colors">
    <td class="px-4 py-3">
      <span class="font-medium text-dark dark:text-white">
        <%= form_template.name %>
      </span>
    </td>
    <td class="px-4 py-3">
      <span class="text-dark dark:text-white">
        <%= form_template.customer&.name || t("form_templates.global") %>
      </span>
    </td>
    <td class="px-4 py-3">
      <span class="text-dark dark:text-white">
        <%= form_template.schema&.dig("fields")&.size || 0 %> <%= t("form_templates.fields") %>
      </span>
    </td>
    <td class="px-4 py-3 text-<%= margin_end_class %>">
      <div class="flex items-center gap-2 justify-end">
        <%= link_to form_template_path(form_template), 
            class: "inline-flex items-center justify-center rounded-md p-2 text-body hover:text-primary dark:hover:text-primary transition-colors",
            title: t("common.view") do %>
          <span class="material-icons text-xl">visibility</span>
        <% end %>
        
        <%= link_to form_template_path(form_template, format: :pdf),
            target: "_blank",
            class: "inline-flex items-center justify-center rounded-md p-2 text-body hover:text-primary dark:hover:text-primary transition-colors",
            title: t("form_templates.preview_pdf") do %>
          <span class="material-icons text-xl">picture_as_pdf</span>
        <% end %>
        
        <%= link_to edit_form_template_path(form_template),
            data: { turbo_frame: dom_id(form_template) },
            class: "inline-flex items-center justify-center rounded-md p-2 text-body hover:text-primary dark:hover:text-primary transition-colors",
            title: t("common.edit") do %>
          <span class="material-icons text-xl">edit</span>
        <% end %>
        
        <%= button_to form_template_path(form_template),
            method: :delete,
            data: { turbo_confirm: t("common.confirm_delete") },
            class: "inline-flex items-center justify-center rounded-md p-2 text-body hover:text-red-500 dark:hover:text-red-500 transition-colors" do %>
          <span class="material-icons text-xl">delete</span>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
