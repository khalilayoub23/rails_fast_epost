<!-- Auth layout with hero + form -->
<div class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-950 via-slate-900 to-black text-white overflow-hidden px-4 py-12" dir="<%= text_direction %>">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-1/3 -left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-[160px] animate-pulse"></div>
    <div class="absolute -bottom-1/3 -right-1/4 w-[28rem] h-[28rem] bg-yellow-500/10 rounded-full blur-[160px] animate-[pulse_6s_ease-in-out_infinite]"></div>
  </div>

  <div class="relative z-10 w-full max-w-6xl">
    <div class="grid gap-8 lg:grid-cols-2 items-stretch">
      <div class="rounded-3xl border border-white/10 bg-white/5 backdrop-blur-xl p-8 shadow-2xl">
        <div class="flex items-center justify-between mb-10">
          <%= link_to pages_home_path do %>
                      <div class="mb-8 text-center">
            <%= image_tag "fast_epost_transparent.png", alt: "FastEpost Logo", class: "h-16" %>
          </div>
          <% end %>
          <span class="inline-flex items-center rounded-full border border-white/20 px-3 py-1 text-xs uppercase tracking-wide text-white/80">
            <%= t('login_badge', default: 'Secure Access') %>
          </span>
        </div>
        <h1 class="text-4xl font-semibold text-white mb-4">
          <%= t('login_title', default: 'Log In to FastEpost') %>
        </h1>
        <p class="text-slate-300 text-lg mb-8">
          <%= t('login_subtitle', default: 'Access your dashboard and manage your deliveries.') %>
        </p>

        <ul class="space-y-4 mb-10 text-slate-200">
          <li class="flex items-start gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-yellow-400"></span>
            <p><%= t('login_benefit_one', default: 'Single click access via Google or Facebook SSO.') %></p>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-yellow-400"></span>
            <p><%= t('login_benefit_two', default: 'Email + password stays available for teams that require it.') %></p>
          </li>
          <li class="flex items-start gap-3">
            <span class="mt-1 h-2 w-2 rounded-full bg-yellow-400"></span>
            <p><%= t('login_benefit_three', default: 'Every login drops you straight into your personal dashboard.') %></p>
          </li>
        </ul>

        <div class="space-y-4">
          <p class="text-sm font-medium text-slate-300 uppercase tracking-widest">
            <%= t('login_social_heading', default: 'Connect with') %>
          </p>
          <%= render "devise/shared/social_connect", resource_name: resource_name %>
        </div>
      </div>

      <div class="rounded-3xl border border-white/10 bg-white/5 px-8 py-10 shadow-2xl backdrop-blur">
        <div class="mb-8">
          <p class="text-sm font-semibold text-yellow-400 uppercase tracking-widest">
            <%= t('login_email_heading_badge', default: 'Email access') %>
          </p>
          <h2 class="text-3xl font-semibold text-white">
            <%= t('login_email_heading', default: 'Use your FastEpost credentials') %>
          </h2>
          <p class="text-slate-400 mt-2">
            <%= t('login_email_hint', default: 'Trusted devices remember your session automatically.') %>
          </p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <div>
            <%= f.label :email, t('email', default: 'Email'), class: "mb-2 block text-sm font-medium text-slate-300" %>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 <%= rtl? ? 'right-0 pr-3' : 'left-0 pl-3' %> flex items-center">
                <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  placeholder: t('email_placeholder', default: 'you@company.com'),
                  class: "w-full rounded-2xl border border-white/10 bg-transparent px-4 py-3 #{rtl? ? 'pr-11' : 'pl-11'} text-white placeholder-slate-500 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/40" %>
            </div>
          </div>

          <div data-controller="password-visibility">
            <%= f.label :password, t('password', default: 'Password'), class: "mb-2 block text-sm font-medium text-slate-300" %>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 <%= rtl? ? 'right-0 pr-3' : 'left-0 pl-3' %> flex items-center">
                <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "current-password",
                  placeholder: t('password_placeholder', default: '••••••••'),
                  class: "w-full rounded-2xl border border-white/10 bg-transparent px-4 py-3 #{rtl? ? 'pr-11 pl-10' : 'pl-11 pr-10'} text-white placeholder-slate-500 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/40",
                  data: { password_visibility_target: "input" } %>
              <button type="button" class="absolute inset-y-0 <%= rtl? ? 'left-0 pl-3' : 'right-0 pr-3' %> flex items-center text-slate-400 hover:text-white focus:outline-none" data-action="click->password-visibility#toggle">
                <span class="material-icons text-xl" data-password-visibility-target="icon">visibility</span>
              </button>
            </div>
          </div>

          <div class="flex flex-wrap items-center justify-between gap-3">
            <% if devise_mapping.rememberable? %>
              <label class="inline-flex items-center gap-2 text-sm text-slate-300">
                <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-white/10 bg-white/5 text-yellow-400 focus:ring-yellow-400" %>
                <span><%= t('remember_me', default: 'Remember me') %></span>
              </label>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to t('forgot_password', default: 'Forgot password?'), new_password_path(resource_name), class: "text-sm font-medium text-yellow-400 hover:text-yellow-300" %>
            <% end %>
          </div>

          <div class="space-y-3">
            <%= f.submit t('sign_in_button', default: 'Log In'), class: "w-full rounded-2xl bg-yellow-400 px-4 py-3 text-base font-semibold text-black transition-all hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
            
            <div class="relative flex py-2 items-center">
              <div class="flex-grow border-t border-white/10"></div>
              <span class="flex-shrink-0 mx-4 text-slate-500 text-xs"><%= t('or', default: 'OR') %></span>
              <div class="flex-grow border-t border-white/10"></div>
            </div>

            <%= link_to t('sign_up', default: "Don't have an account? Sign up"), new_registration_path(resource_name), class: "flex w-full items-center justify-center rounded-2xl border border-white/20 bg-white/5 px-4 py-3 text-base font-semibold text-white transition-all hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/20" %>

            <p class="text-center text-xs text-slate-400">
              <%= t('login_security_note', default: 'Enterprise SSO is fully compliant with GDPR and ISO27001.') %>
            </p>
          </div>
        <% end %>

        <div class="mt-8 border-t border-white/10 pt-6 text-center text-sm text-slate-400">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
    </div>
  </div>
</div>
