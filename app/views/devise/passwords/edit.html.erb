<div class="flex min-h-screen items-center justify-center bg-slate-950 px-4 py-12">
  <div class="w-full max-w-md">
    <!-- Logo/Header -->
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-white">FastEpost</h1>
      <p class="mt-2 text-sm text-slate-300">Change your password</p>
    </div>

    <!-- Password Change Card -->
    <div class="rounded-3xl border border-white/10 bg-white/5 px-8 py-10 shadow-2xl shadow-black/40 backdrop-blur">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- New Password Field -->
        <div>
          <%= f.label :password, "New password", class: "mb-2 block text-sm font-semibold text-slate-200" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-slate-400"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <!-- Password Confirmation Field -->
        <div>
          <%= f.label :password_confirmation, "Confirm new password", class: "mb-2 block text-sm font-semibold text-slate-200" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Change my password", class: "w-full rounded-2xl bg-yellow-400 px-4 py-3 text-sm font-semibold text-black transition-all hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
