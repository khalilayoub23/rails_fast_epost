<div class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-950 via-gray-900 to-black text-white overflow-hidden px-4 py-12">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-1/3 -left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-[160px] animate-pulse"></div>
    <div class="absolute -bottom-1/3 -right-1/4 w-[28rem] h-[28rem] bg-yellow-500/10 rounded-full blur-[160px] animate-[pulse_6s_ease-in-out_infinite]"></div>
  </div>

  <div class="relative z-10 w-full max-w-6xl">
    <div class="grid gap-8 lg:grid-cols-2 items-stretch">
      <div class="rounded-3xl border border-white/10 bg-white/5 backdrop-blur-xl p-8 shadow-2xl">
        <div class="flex items-center justify-between mb-10">
          <%= link_to pages_home_path do %>
            <%= image_tag "fast epost transparent.png", alt: "FastEpost Logo", class: "h-16" %>
          <% end %>
          <span class="inline-flex items-center rounded-full border border-white/20 px-3 py-1 text-xs uppercase tracking-wide text-white/80">
            <%= t('signup_badge', default: '3 min setup') %>
          </span>
        </div>
        <h1 class="text-4xl font-semibold text-white mb-4">
          <%= t('signup_title', default: 'Create your account') %>
        </h1>
        <p class="text-gray-300 text-lg mb-8">
          <%= t('signup_subtitle', default: 'Choose social SSO or email and land directly on your dashboard once you are done.') %>
        </p>

        <div class="grid gap-4 mb-10">
          <div class="rounded-2xl border border-white/10 p-4">
            <p class="text-sm uppercase tracking-widest text-gray-400"><%= t('signup_step_one', default: 'Connect') %></p>
            <p class="text-lg text-white"><%= t('signup_step_one_desc', default: 'Pick Google, Facebook, or continue with email.') %></p>
          </div>
          <div class="rounded-2xl border border-white/10 p-4">
            <p class="text-sm uppercase tracking-widest text-gray-400"><%= t('signup_step_two', default: 'Customize') %></p>
            <p class="text-lg text-white"><%= t('signup_step_two_desc', default: 'Tell us how you ship, get matched to workflows.') %></p>
          </div>
          <div class="rounded-2xl border border-white/10 p-4">
            <p class="text-sm uppercase tracking-widest text-gray-400"><%= t('signup_step_three', default: 'Launch') %></p>
            <p class="text-lg text-white"><%= t('signup_step_three_desc', default: 'Go straight to your personalized dashboard experience.') %></p>
          </div>
        </div>

        <div class="space-y-4">
          <p class="text-sm font-medium text-gray-300 uppercase tracking-widest">
            <%= t('signup_social_heading', default: 'Connect with') %>
          </p>
          <%= render "devise/shared/social_connect", resource_name: resource_name %>
        </div>
      </div>

      <div class="rounded-3xl border border-white/10 bg-gray-900/80 px-8 py-10 shadow-2xl backdrop-blur">
        <div class="mb-8">
          <p class="text-sm font-semibold text-yellow-400 uppercase tracking-widest">
            <%= t('signup_email_heading_badge', default: 'Email sign up') %>
          </p>
          <h2 class="text-3xl font-semibold text-white">
            <%= t('signup_email_heading', default: 'Create your FastEpost login') %>
          </h2>
          <p class="text-gray-400 mt-2">
            <%= t('signup_email_hint', default: 'We keep things lightweight—only three fields to get started.') %>
          </p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <% if resource.errors.any? %>
            <div class="rounded-2xl border border-red-500/30 bg-red-900/30 p-4 text-sm text-red-100">
              <p class="font-semibold mb-2">
                <%= pluralize(resource.errors.count, 'error') %> <%= t('errors_occurred', default: 'occurred') %>
              </p>
              <ul class="list-disc space-y-1 pl-5">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.label :email, t('email', default: 'Email'), class: "mb-2 block text-sm font-medium text-gray-300" %>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                  placeholder: t('email_placeholder', default: 'you@company.com'),
                  class: "w-full rounded-2xl border border-white/10 bg-transparent px-4 py-3 pl-11 text-white placeholder-gray-500 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/40" %>
            </div>
          </div>

          <div>
            <%= f.label :password, t('password', default: 'Password'), class: "mb-2 block text-sm font-medium text-gray-300" %>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "new-password",
                  placeholder: t('password_placeholder', default: '••••••••'),
                  class: "w-full rounded-2xl border border-white/10 bg-transparent px-4 py-3 pl-11 text-white placeholder-gray-500 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/40" %>
            </div>
            <% if @minimum_password_length %>
              <p class="mt-2 text-xs text-gray-400">
                <%= t('minimum_characters', default: '%{count} characters minimum', count: @minimum_password_length) %>
              </p>
            <% end %>
          </div>

          <div>
            <%= f.label :password_confirmation, t('password_confirmation', default: 'Confirm Password'), class: "mb-2 block text-sm font-medium text-gray-300" %>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  placeholder: t('password_placeholder', default: '••••••••'),
                  class: "w-full rounded-2xl border border-white/10 bg-transparent px-4 py-3 pl-11 text-white placeholder-gray-500 focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/40" %>
            </div>
          </div>

          <div class="space-y-3">
            <%= f.submit t('create_account_button', default: 'Create Account'), class: "w-full rounded-2xl bg-yellow-400 px-4 py-3 text-base font-semibold text-gray-900 transition-all hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
            <p class="text-center text-xs text-gray-500">
              <%= t('signup_security_note', default: 'Signing up confirms you agree to our terms and privacy promise.') %>
            </p>
          </div>
        <% end %>

        <div class="mt-8 border-t border-white/10 pt-6 text-center text-sm text-gray-400">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="mt-8 text-center">
      <%= link_to pages_home_path, class: "inline-flex items-center text-sm text-gray-400 hover:text-yellow-400" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <%= t('back_to_home', default: 'Back to homepage') %>
      <% end %>
    </div>
  </div>
</div>
