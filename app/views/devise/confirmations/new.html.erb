<div class="flex min-h-screen items-center justify-center bg-slate-950 px-4 py-12">
  <div class="w-full max-w-md">
    <div class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-white">FastEpost</h1>
      <p class="mt-2 text-sm text-slate-300">Resend confirmation instructions</p>
    </div>

    <div class="rounded-3xl border border-white/10 bg-white/5 px-8 py-10 shadow-2xl shadow-black/40 backdrop-blur">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.input :email,
              required: true,
              autofocus: true,
              label_html: { class: "mb-2 block text-sm font-semibold text-slate-200" },
              input_html: {
                autocomplete: "email",
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                class: "w-full rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30"
              }
          %>
        </div>

        <div>
          <%= f.button :submit, "Resend confirmation instructions",
              class: "w-full rounded-2xl bg-yellow-400 px-4 py-3 text-sm font-semibold text-black transition-all hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
