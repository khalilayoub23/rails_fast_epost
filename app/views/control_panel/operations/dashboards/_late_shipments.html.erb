<div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur p-5">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-white"><%= t("operations.late_shipments", default: "Late-stage shipments") %></h2>
    <span class="text-xs text-slate-400"><%= t("operations.escalate_before_sla", default: "Escalate before SLA breach") %></span>
  </div>
  <ul class="space-y-3">
    <% late_tasks.each do |task| %>
      <li class="flex items-center justify-between rounded-xl border border-white/10 bg-white/5 backdrop-blur px-4 py-3">
        <div>
          <p class="text-sm font-semibold text-white"><%= task.barcode %></p>
          <p class="text-xs text-slate-400"><%= t("tasks.carrier", default: "Carrier") %>: <%= task.carrier&.name || t("tasks.unassigned", default: "Unassigned") %></p>
        </div>
        <span class="text-xs font-semibold text-amber-200"><%= t("operations.eta", default: "ETA %{time}", time: (task.delivery_time ? l(task.delivery_time, format: :short) : t("common.tbd", default: "TBD"))) %></span>
      </li>
    <% end %>
    <% if late_tasks.empty? %>
      <li class="text-sm text-slate-400"><%= t("operations.no_delays", default: "No delayed shipments on deck.") %></li>
    <% end %>
  </ul>
</div>
