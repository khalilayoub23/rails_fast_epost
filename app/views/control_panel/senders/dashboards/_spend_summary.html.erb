<div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur p-5">
  <h2 class="text-lg font-semibold text-white"><%= t("senders.spend_summary", default: "Spend summary") %></h2>
  <div class="mt-4 space-y-4">
    <div>
      <p class="text-xs text-slate-400"><%= t("dashboard.total", default: "Total") %></p>
      <p class="text-2xl font-bold text-white"><%= number_to_currency(spend_summary[:total] / 100.0, unit: currency) %></p>
    </div>
    <div>
      <p class="text-xs text-slate-400"><%= t("dashboard.captured", default: "Captured") %></p>
      <p class="text-xl font-semibold text-emerald-200"><%= number_to_currency(spend_summary[:succeeded] / 100.0, unit: currency) %></p>
    </div>
    <div>
      <p class="text-xs text-slate-400"><%= t("senders.open_invoices", default: "Open invoices") %></p>
      <p class="text-xl font-semibold text-amber-200"><%= number_to_currency(spend_summary[:pending] / 100.0, unit: currency) %></p>
    </div>
  </div>
  <% if avg_delivery_hours.present? %>
    <p class="mt-6 text-sm text-slate-300"><%= t("senders.avg_delivery_time", default: "Avg. delivery time: %{hours}h", hours: avg_delivery_hours) %></p>
  <% end %>
</div>
