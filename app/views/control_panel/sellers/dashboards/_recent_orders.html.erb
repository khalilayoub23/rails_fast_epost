<div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur p-5 mt-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-white"><%= t("sellers.recent_orders", default: "Recent orders") %></h2>
    <span class="text-xs text-slate-400"><%= t("common.latest_n", default: "Latest 8") %></span>
  </div>
  <div class="space-y-3">
    <% recent_orders.each do |task| %>
      <div class="rounded-xl border border-white/10 bg-white/5 backdrop-blur px-4 py-3">
        <div class="flex items-center justify-between">
          <p class="text-sm font-semibold text-white"><%= task.barcode %></p>
          <span class="text-xs text-slate-400"><%= task.status.humanize %></span>
        </div>
        <p class="text-xs text-slate-400"><%= t("tasks.carrier", default: "Carrier") %>: <%= task.carrier&.name || t("tasks.pending", default: "Pending") %></p>
        <p class="text-xs text-slate-400"><%= t("tasks.created", default: "Created") %> <%= l(task.created_at, format: :short) %></p>
      </div>
    <% end %>
    <% if recent_orders.empty? %>
      <p class="text-sm text-slate-400"><%= t("sellers.no_orders", default: "No orders yet.") %></p>
    <% end %>
  </div>
</div>
