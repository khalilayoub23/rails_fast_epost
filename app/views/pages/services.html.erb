<!-- Services Page -->
<section class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white py-20">
  <div class="container mx-auto px-4 py-16">
    <!-- Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <%= t("services.title").split.first %> <span class="text-yellow-400"><%= t("services.title").split.last %></span>
      </h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">
        <%= t("services.subtitle") %>
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto mb-16">
      <!-- Legal Document Delivery -->
      <div class="bg-gray-800 rounded-2xl p-8 hover:bg-gray-750 transition-all shadow-xl border border-gray-700 hover:border-yellow-400">
        <div class="w-16 h-16 bg-yellow-400/10 rounded-xl flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-yellow-400 mb-4"><%= t("services.legal_title") %></h3>
        <p class="text-gray-300 mb-6"><%= t("services.legal_description") %></p>
        
        <ul class="space-y-4 mb-8">
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.legal_feature_1") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.legal_feature_2") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.legal_feature_3") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.legal_feature_4") %></span>
          </li>
        </ul>

        <%= link_to t("services.get_started"), pages_contact_path, class: "inline-block px-6 py-3 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transition-all" %>
      </div>

      <!-- E-commerce Delivery -->
      <div class="bg-gray-800 rounded-2xl p-8 hover:bg-gray-750 transition-all shadow-xl border border-gray-700 hover:border-yellow-400">
        <div class="w-16 h-16 bg-yellow-400/10 rounded-xl flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-yellow-400 mb-4"><%= t("services.ecommerce_title") %></h3>
        <p class="text-gray-300 mb-6"><%= t("services.ecommerce_description") %></p>
        
        <ul class="space-y-4 mb-8">
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.ecommerce_feature_1") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.ecommerce_feature_2") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.ecommerce_feature_3") %></span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-yellow-400 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span><%= t("services.ecommerce_feature_4") %></span>
          </li>
        </ul>

        <%= link_to t("services.get_started"), pages_contact_path, class: "inline-block px-6 py-3 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transition-all" %>
      </div>
    </div>

    <!-- Why Choose Us -->
    <div class="bg-gray-800 rounded-2xl p-12 border border-gray-700 max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">
        <%= t("services.why_choose_title").split.first(2).join(" ") %> <span class="text-yellow-400"><%= t("services.why_choose_title").split.last(2).join(" ") %></span>
      </h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-400/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2"><%= t("services.feature_fast_title") %></h3>
          <p class="text-gray-300"><%= t("services.feature_fast_desc") %></p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-400/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2"><%= t("services.feature_secure_title") %></h3>
          <p class="text-gray-300"><%= t("services.feature_secure_desc") %></p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-400/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2"><%= t("services.feature_support_title") %></h3>
          <p class="text-gray-300"><%= t("services.feature_support_desc") %></p>
        </div>
      </div>
    </div>
  </div>
</section>
