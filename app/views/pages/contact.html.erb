<!-- Contact Page -->
<% content_for :title, t("contact_page.meta_title") %>
<section class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black text-white py-20">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <%= t("contact_page.hero_title") %> <span class="text-yellow-400"><%= t("contact_page.hero_title_highlight") %></span>
        </h1>
        <p class="text-xl text-slate-300">
          <%= t("contact_page.hero_subtitle") %>
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="rounded-3xl p-8 border border-white/10 bg-white/5 shadow-2xl shadow-black/30 backdrop-blur">
          <h2 class="text-2xl font-bold text-yellow-400 mb-6"><%= t("contact_page.form_title") %></h2>
          
          <% if @contact.errors.any? %>
            <div class="mb-6 rounded-lg border border-red-500 bg-red-500/10 p-4 text-sm text-red-200">
              <p class="font-semibold mb-2"><%= t("contact_page.form_error_title") %></p>
              <ul class="list-disc list-inside space-y-1">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @contact,
                        url: pages_contact_path,
                        method: :post,
                        local: true,
                        class: "space-y-4" do |f| %>
            <div>
              <%= f.label :name, t("contact_page.full_name"), class: "block text-sm font-medium mb-2" %>
              <%= f.text_field :name, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-yellow-400/30 focus:border-yellow-400 text-white placeholder:text-slate-400", placeholder: t("contact_page.full_name_placeholder"), required: true %>
            </div>

            <div>
              <%= f.label :email, t("contact_page.email"), class: "block text-sm font-medium mb-2" %>
              <%= f.email_field :email, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-yellow-400/30 focus:border-yellow-400 text-white placeholder:text-slate-400", placeholder: t("contact_page.email_placeholder"), required: true %>
            </div>

            <div>
              <%= f.label :phone, t("contact_page.phone"), class: "block text-sm font-medium mb-2" %>
              <%= f.telephone_field :phone, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-yellow-400/30 focus:border-yellow-400 text-white placeholder:text-slate-400", placeholder: t("contact_page.phone_placeholder") %>
            </div>

            <div>
                <%= f.label :service, t("contact_page.service_type"), class: "block text-sm font-medium mb-2" %>
              <%= f.select :service,
                  [[t("contact_page.service_legal"), "legal"], [t("contact_page.service_ecommerce"), "ecommerce"], [t("contact_page.service_other"), "other"]],
                  { prompt: t("contact_page.service_prompt") },
                  class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-yellow-400/30 focus:border-yellow-400 text-white" %>
            </div>

            <div>
              <%= f.label :message, t("contact_page.message"), class: "block text-sm font-medium mb-2" %>
              <%= f.text_area :message, rows: 4, class: "w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg focus:ring-2 focus:ring-yellow-400/30 focus:border-yellow-400 text-white placeholder:text-slate-400", placeholder: t("contact_page.message_placeholder"), required: true %>
            </div>

            <%= f.submit t("contact_page.submit"), class: "w-full px-8 py-4 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-300 transition shadow-lg cursor-pointer" %>
          <% end %>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="rounded-3xl p-8 border border-white/10 bg-white/5 shadow-2xl shadow-black/30 backdrop-blur">
            <h2 class="text-2xl font-bold text-yellow-400 mb-6"><%= t("contact_page.info_title") %></h2>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-yellow-400/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1"><%= t("contact_page.phone_label") %></h3>
                  <p class="text-slate-300"><%= t("contact_phone") %></p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-yellow-400/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1"><%= t("contact_page.email_label") %></h3>
                  <p class="text-slate-300"><%= t("contact_email") %></p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-yellow-400/10 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold mb-1"><%= t("contact_page.hours_label") %></h3>
                  <p class="text-slate-300"><%= t("contact_page.hours_weekdays") %></p>
                  <p class="text-slate-300"><%= t("contact_page.hours_weekend") %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="rounded-3xl p-8 border border-white/10 bg-white/5 shadow-2xl shadow-black/30 backdrop-blur">
            <h3 class="text-xl font-bold text-yellow-400 mb-4"><%= t("contact_page.quick_actions") %></h3>
            <div class="space-y-3">
              <%= link_to pages_track_parcel_path, class: "flex items-center justify-between p-3 bg-white/5 rounded-lg hover:bg-white/10 transition-colors group border border-white/10" do %>
                <span class="font-medium"><%= t("contact_page.track_parcel") %></span>
                <svg class="w-5 h-5 text-yellow-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
              
              <% if user_signed_in? %>
                <%= link_to dashboard_path, class: "flex items-center justify-between p-3 bg-white/5 rounded-lg hover:bg-white/10 transition-colors group border border-white/10" do %>
                  <span class="font-medium"><%= t("contact_page.go_to_dashboard") %></span>
                  <svg class="w-5 h-5 text-yellow-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              <% else %>
                <%= link_to new_user_registration_path, class: "flex items-center justify-between p-3 bg-white/5 rounded-lg hover:bg-white/10 transition-colors group border border-white/10" do %>
                  <span class="font-medium"><%= t("contact_page.create_account") %></span>
                  <svg class="w-5 h-5 text-yellow-400 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
