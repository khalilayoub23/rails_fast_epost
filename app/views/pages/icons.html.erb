<!-- Icon Showcase - Custom Icons Documentation -->
<section class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white py-20">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-400 to-yellow-600 bg-clip-text text-transparent">
          Fast Epost Custom Icons
        </h1>
        <p class="text-xl text-gray-300">
          Custom-designed SVG icons matching our brand identity
        </p>
      </div>

      <!-- Icon Grid -->
      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-8">
        <!-- Package Create -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= package_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Package Create</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Order registration</p>
          <code class="text-xs text-gray-500 block text-center">package-create.svg</code>
        </div>

        <!-- Truck Pickup -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= truck_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Truck Pickup</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Package collection</p>
          <code class="text-xs text-gray-500 block text-center">truck-pickup.svg</code>
        </div>

        <!-- Plane Transit -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= plane_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Plane Transit</h3>
          <p class="text-center text-sm text-gray-400 mb-2">In-transit status</p>
          <code class="text-xs text-gray-500 block text-center">plane-transit.svg</code>
        </div>

        <!-- Delivery Truck -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= delivery_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Delivery Truck</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Out for delivery</p>
          <code class="text-xs text-gray-500 block text-center">delivery-truck.svg</code>
        </div>

        <!-- Checkmark Delivered -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= checkmark_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Checkmark</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Successfully delivered</p>
          <code class="text-xs text-gray-500 block text-center">checkmark-delivered.svg</code>
        </div>

        <!-- Warning Failed -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= warning_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Warning</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Delivery failed</p>
          <code class="text-xs text-gray-500 block text-center">warning-failed.svg</code>
        </div>

        <!-- Return Package -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= return_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Return</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Return to sender</p>
          <code class="text-xs text-gray-500 block text-center">return-package.svg</code>
        </div>

        <!-- Contact Mail -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= mail_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Contact Mail</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Communication</p>
          <code class="text-xs text-gray-500 block text-center">contact-mail.svg</code>
        </div>

        <!-- Search Tracking -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= search_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Search</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Track packages</p>
          <code class="text-xs text-gray-500 block text-center">search-tracking.svg</code>
        </div>

        <!-- Clock Time -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= clock_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Clock</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Delivery time</p>
          <code class="text-xs text-gray-500 block text-center">clock-time.svg</code>
        </div>

        <!-- Location Pin -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700 hover:border-yellow-400 transition-all hover:scale-105">
          <div class="flex justify-center mb-4 bg-gray-900 rounded-lg p-6">
            <%= location_icon(size: '64', css_class: '') %>
          </div>
          <h3 class="text-center font-bold text-yellow-400 mb-2">Location</h3>
          <p class="text-center text-sm text-gray-400 mb-2">Address markers</p>
          <code class="text-xs text-gray-500 block text-center">location-pin.svg</code>
        </div>
      </div>

      <!-- Usage Guide -->
