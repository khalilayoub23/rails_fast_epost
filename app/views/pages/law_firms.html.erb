<!-- For Law Firms Page -->
<section class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black text-white py-20">
  <div class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <%= t("law_firms.title").split.first(2).join(" ") %> <span class="text-yellow-400"><%= t("law_firms.title").split.last %></span>
      </h1>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto mb-8">
        <%= t("law_firms.subtitle") %>
      </p>
      <%= link_to t("law_firms.get_started"), pages_contact_path, class: "inline-block px-8 py-4 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-300 transition shadow-lg text-lg" %>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
      <div class="bg-white/5 rounded-3xl p-8 border border-white/10 hover:border-yellow-400/30 hover:bg-white/10 transition shadow-2xl shadow-black/30 backdrop-blur">
        <div class="w-16 h-16 bg-yellow-400/10 rounded-xl mb-6 flex items-center justify-center mx-auto">
          <svg class="w-8 h-8 text-yellow-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: block; margin: auto;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-yellow-400 mb-4"><%= t("law_firms.feature_custody_title") %></h3>
        <p class="text-slate-300"><%= t("law_firms.feature_custody_desc") %></p>
      </div>

      <div class="bg-white/5 rounded-3xl p-8 border border-white/10 hover:border-yellow-400/30 hover:bg-white/10 transition shadow-2xl shadow-black/30 backdrop-blur">
        <div class="w-16 h-16 bg-yellow-400/10 rounded-xl mb-6 flex items-center justify-center mx-auto">
          <svg class="w-8 h-8 text-yellow-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: block; margin: auto;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-yellow-400 mb-4"><%= t("law_firms.feature_filing_title") %></h3>
        <p class="text-slate-300"><%= t("law_firms.feature_filing_desc") %></p>
      </div>

      <div class="bg-white/5 rounded-3xl p-8 border border-white/10 hover:border-yellow-400/30 hover:bg-white/10 transition shadow-2xl shadow-black/30 backdrop-blur">
        <div class="w-16 h-16 bg-yellow-400/10 rounded-xl mb-6 flex items-center justify-center mx-auto">
          <svg class="w-8 h-8 text-yellow-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: block; margin: auto;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-yellow-400 mb-4"><%= t("law_firms.feature_proof_title") %></h3>
        <p class="text-slate-300"><%= t("law_firms.feature_proof_desc") %></p>
      </div>
    </div>

    <!-- Services List -->
    <div class="max-w-4xl mx-auto bg-white/5 rounded-3xl p-8 md:p-12 border border-white/10 mb-16 shadow-2xl shadow-black/30 backdrop-blur">
      <h2 class="text-3xl font-bold text-center mb-12"><%= t("law_firms.what_we_deliver") %></h2>
      
      <div class="grid md:grid-cols-2 gap-6">
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_1") %></span>
        </div>
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_2") %></span>
        </div>
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_3") %></span>
        </div>
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_4") %></span>
        </div>
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_5") %></span>
        </div>
        <div class="flex items-start space-x-3">
          <svg class="w-6 h-6 text-yellow-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          <span class="text-slate-300"><%= t("law_firms.service_6") %></span>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="max-w-4xl mx-auto bg-gradient-to-r from-yellow-400 to-yellow-500 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-black mb-4">
        <%= t("law_firms.cta_title") %>
      </h2>
      <p class="text-black/80 text-lg mb-8">
        <%= t("law_firms.cta_subtitle") %>
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to t("law_firms.request_quote"), pages_contact_path, class: "inline-block px-8 py-4 bg-black text-white font-bold rounded-lg hover:bg-black/80 transition-all shadow-lg" %>
        <%= link_to t("law_firms.view_pricing"), pages_services_path, class: "inline-block px-8 py-4 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-300 transition-all shadow-lg shadow-yellow-500/20" %>
      </div>
    </div>
  </div>
</section>
