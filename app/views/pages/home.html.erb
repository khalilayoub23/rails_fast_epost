<!-- Hero Section -->
<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white overflow-hidden">
  <!-- Background Image Overlay -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1566576721346-d4a3b4eaeb55?q=80&w=2065')] bg-cover bg-center"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 py-20">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Main Headline -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 leading-tight">
        <span data-i18n="hero_title_1"><%= t("hero_title_1") %></span> <span data-i18n="hero_title_trust" class="text-yellow-400"><%= t("hero_title_trust") %></span><br>
        <span data-i18n="hero_title_2"><%= t("hero_title_2") %></span><br>
        <span data-i18n="hero_title_3"><%= t("hero_title_3") %></span>
