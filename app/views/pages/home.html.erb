        <%= link_to pages_track_parcel_path, class: "inline-block px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white hover:text-black transition-all text-lg" do %>
          <span data-i18n="btn_track_delivery"><%= t("btn_track_delivery") %></span>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
