<section class="py-32 bg-black" dir="<%= text_direction %>">
  <div class="container mx-auto px-4">
    <div class="grid lg:grid-cols-2 gap-8 items-stretch">
      <!-- Contact Info Card -->
      <div class="p-10 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-sm h-full flex flex-col justify-between">
        <div>
          <h3 class="text-4xl font-bold text-white mb-10"><%= t('contact.title', default: "Let's Talk About Your Next Shipment") %></h3>
          
          <div class="space-y-8 mb-10">
            <div class="flex items-center gap-5 text-gray-300">
              <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-yellow-400 flex-shrink-0">
