<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-br from-gray-950 via-gray-900 to-black pb-20" dir="<%= text_direction %>">
  <!-- Background Effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-yellow-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-5xl <%= alignment %>">
      <span class="text-yellow-400 font-bold tracking-wider uppercase text-sm mb-4 block" data-i18n="hero_title_1"><%= t("hero_title_1") %></span>
      
      <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight mb-8">
        <span class="block" data-i18n="hero_title_trust"><%= t("hero_title_trust") %></span>
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-400" data-i18n="hero_title_2"><%= t("hero_title_2") %></span>
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-200" data-i18n="hero_title_3"><%= t("hero_title_3") %></span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-400 mb-12 max-w-3xl leading-relaxed" data-i18n="hero_subtitle">
        <%= t("hero_subtitle") %>
      </p>
      
      <div class="flex flex-wrap gap-4">
        <%= link_to pages_contact_path, class: "inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-black transition-all duration-200 bg-yellow-400 rounded-xl hover:bg-yellow-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 focus:ring-offset-gray-900" do %>
          <span data-i18n="btn_get_quote"><%= t("btn_get_quote") %></span>
