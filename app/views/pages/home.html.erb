            <div class="flex items-center gap-5 text-gray-300">
              <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-yellow-400 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              </div>
              <span class="text-lg" data-i18n="contact_email"><%= t("contact_email") %></span>
            </div>
            <div class="flex items-center gap-5 text-gray-300">
              <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-yellow-400 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a2 2 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <span class="text-lg" data-i18n="contact_address"><%= t("contact_address") %></span>
            </div>
          </div>

          <!-- Social Media Icons -->
          <div class="flex flex-wrap gap-4 mb-8">
            <% SOCIAL_MEDIA_CONFIG.each do |platform, url| %>
              <% next if url.blank? %>
              <% icon_svg = social_icons[platform] %>
              <% if icon_svg %>
                <%= link_to url, target: "_blank", rel: "noopener noreferrer", class: "w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-yellow-400 hover:bg-yellow-400 hover:text-black transition-all duration-300 group", aria: { label: platform.humanize } do %>
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" stroke="none">
                    <%= icon_svg.html_safe %>
                  </svg>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>

        <% if SOCIAL_MEDIA_CONFIG['whatsapp'].present? %>
          <%= link_to SOCIAL_MEDIA_CONFIG['whatsapp'], target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center justify-center w-full px-8 py-5 text-lg font-bold text-black transition-all duration-200 bg-yellow-400 rounded-xl hover:bg-yellow-300" do %>
            <%= t('contact.whatsapp', default: 'Chat with us now') %>
          <% end %>
        <% else %>
          <%= link_to pages_contact_path, class: "inline-flex items-center justify-center w-full px-8 py-5 text-lg font-bold text-black transition-all duration-200 bg-yellow-400 rounded-xl hover:bg-yellow-300" do %>
            <%= t('contact.contact_us', default: 'Contact Us') %>
          <% end %>
        <% end %>
      </div>

      <!-- Contact Form Card -->
      <div class="p-10 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-sm h-full flex flex-col">
        <h3 class="text-3xl font-bold text-white mb-8"><%= t('contact.form_title', default: 'Get a Custom Plan') %></h3>
        <%= form_with url: pages_contact_path, method: :post, local: true, class: "flex flex-col flex-grow" do |form| %>
          <div class="space-y-6">
            <div>
              <%= form.text_field :name, placeholder: t('contact.name', default: 'Name'), class: "w-full px-6 py-4 bg-black/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-yellow-400 focus:ring-1 focus:ring-yellow-400 transition-colors text-lg", required: true %>
            </div>
            <div>
              <%= form.email_field :email, placeholder: t('contact.email', default: 'Email'), class: "w-full px-6 py-4 bg-black/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-yellow-400 focus:ring-1 focus:ring-yellow-400 transition-colors text-lg", required: true %>
            </div>
            <div>
              <%= form.text_area :message, rows: 4, placeholder: t('contact.message', default: 'Describe your shipping needs'), class: "w-full px-6 py-4 bg-black/50 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-yellow-400 focus:ring-1 focus:ring-yellow-400 transition-colors text-lg" %>
            </div>
