<section class="min-h-screen bg-gradient-to-br from-red-900 via-rose-900 to-black text-white py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <svg class="w-16 h-16 mx-auto text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M5.22 5.22l13.56 13.56M12 5a7 7 0 017 7m0 0a7 7 0 01-7 7m0-14a7 7 0 00-7 7m0 0a7 7 0 007 7" />
        </svg>
        <h1 class="text-4xl font-bold mt-6">Payment Cancelled</h1>
        <p class="text-slate-300 mt-2">Your checkout session was cancelled. You can restart the process at any time.</p>
      </div>

      <% if @payment.present? %>
        <div class="bg-black/30 border border-red-500/40 rounded-2xl p-8 text-left space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-slate-400">Reference</span>
            <span class="font-semibold"><%= @payment.external_id || @payment.checkout_session_id %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-400">Last known status</span>
            <span class="uppercase tracking-wide"><%= @payment.gateway_status %></span>
          </div>
        </div>

        <% if @payment.gateway_status != "succeeded" && @payment.gateway_status != "canceled" %>
          <div class="mt-6">
            <%= button_to "Confirm cancellation", checkout_confirm_cancel_path,
                method: :post,
                params: {
                  token: params[:token],
                  session_id: params[:session_id]
                },
                class: "inline-flex items-center justify-center px-6 py-3 rounded-lg bg-red-500 text-white font-semibold hover:bg-red-400 transition" %>
          </div>
        <% end %>
      <% elsif @session_id.present? %>
        <p class="text-slate-300 mb-8">Stripe session <code class="bg-black/40 px-2 py-1 rounded">
          <%= @session_id %>
        </code> was cancelled.</p>
      <% end %>

      <div class="mt-10 space-y-4">
        <%= link_to "Try payment again", new_checkout_path, class: "inline-flex items-center justify-center px-6 py-3 rounded-lg bg-yellow-400 text-black font-semibold hover:bg-yellow-300 transition" %>
        <div>
          <%= link_to "Return to home", landing_page_path, class: "text-sm text-slate-300 underline" %>
        </div>
      </div>
    </div>
  </div>
</section>
