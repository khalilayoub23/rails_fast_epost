<section class="min-h-screen bg-gradient-to-br from-green-900 via-emerald-900 to-black text-white py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <svg class="w-16 h-16 mx-auto text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h1 class="text-4xl font-bold mt-6">Payment Successful</h1>
        <p class="text-gray-300 mt-2">Thank you for trusting Fast Epost. A confirmation email will arrive shortly.</p>
      </div>

      <% if @payment.present? %>
        <div class="bg-black/30 border border-green-500/40 rounded-2xl p-8 text-left space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Reference</span>
            <span class="font-semibold"><%= @payment.external_id || @payment.checkout_session_id %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Amount</span>
            <span class="text-2xl font-bold">
              <%= number_to_currency((@payment.amount_cents || 0) / 100.0, unit: @payment.currency || "USD") %>
            </span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-gray-400">Status</span>
            <span class="uppercase tracking-wide"><%= @payment.gateway_status %></span>
          </div>
        </div>
      <% elsif @session_id.present? %>
        <p class="text-gray-300 mb-8">Stripe session <code class="bg-black/40 px-2 py-1 rounded">
          <%= @session_id %>
        </code> completed successfully.</p>
      <% end %>

      <div class="mt-10 space-y-4">
        <%= link_to "Start another payment", new_checkout_path, class: "inline-flex items-center justify-center px-6 py-3 rounded-lg bg-yellow-400 text-black font-semibold hover:bg-yellow-300 transition" %>
        <div>
          <%= link_to "Return to home", landing_page_path, class: "text-sm text-gray-300 underline" %>
        </div>
      </div>
    </div>
  </div>
</section>
