<% content_for :page_title, "Task ##{@task.id}" %>

<div class="space-y-6">
  <div>
    <nav class="flex text-sm text-body" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to root_path, class: "text-body hover:text-dark" do %>
            <span class="material-icons text-sm mr-1">home</span>
            Home
          <% end %>
        </li>
        <% if @task.customer %>
          <li>
            <div class="flex items-center">
              <span class="material-icons text-sm text-body mx-1">chevron_right</span>
              <%= link_to "Customers", customers_path, class: "text-body hover:text-dark" %>
          <div>
            <div class="text-sm text-body">Priority</div>
            <div><%= render "shared/priority_badge", priority: @task.priority %></div>
          </div>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <span class="material-icons text-sm text-body mx-1">chevron_right</span>
              <%= link_to @task.customer.name, customer_path(@task.customer), class: "text-body hover:text-dark" %>
            </div>
          </li>
        <% end %>
        <li>
          <div class="flex items-center">
            <span class="material-icons text-sm text-body mx-1">chevron_right</span>
            <%= link_to "Tasks", (@task.customer ? customer_tasks_path(@task.customer) : tasks_path), class: "text-body hover:text-dark" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <span class="material-icons text-sm text-body mx-1">chevron_right</span>
            <span class="text-dark font-medium">#<%= @task.id %></span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <div class="rounded-sm border border-stroke bg-white px-5 pt-6 pb-2.5 shadow-default">
    <div class="mb-4">
      <h2 class="text-title-md font-semibold text-dark">Task #<%= @task.id %></h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <div class="text-sm text-body">Status</div>
        <div><%= render "shared/status_badge", status: @task.status %></div>
      </div>
      <div>
        <div class="text-sm text-body">Priority</div>
        <div><%= render "shared/priority_badge", priority: @task.priority %></div>
      </div>
      <div>
        <div class="text-sm text-body">Customer</div>
        <div class="text-dark"><%= @task.customer&.name || "-" %></div>
      </div>
      <div>
        <div class="text-sm text-body">Carrier</div>
        <div class="text-dark">#<%= @task.carrier_id %></div>
      </div>
      <div>
        <div class="text-sm text-body">Created</div>
        <div class="text-dark"><%= l(@task.created_at, format: :long) %></div>
      </div>
      <div class="sm:col-span-2">
        <div class="text-sm text-body">Barcode</div>
        <div class="text-dark"><%= @task.barcode %></div>
      </div>
    </div>
  </div>

  <% if policy(Delivery).create? %>
    <div class="rounded-sm border border-yellow-400/40 bg-yellow-50 px-5 py-4 shadow-lg">
      <div class="flex flex-col gap-3 lg:flex-row lg:items-center lg:justify-between">
        <div>
          <p class="text-sm font-semibold text-yellow-600">Need to attach court PDFs?</p>
          <p class="text-sm text-gray-700">Launch the delivery workspace to upload stamped PDFs, inject barcodes, and route immutable signatures before this task goes out.</p>
        </div>
        <%= link_to t("deliveries.upload_pdf_cta", default: "Upload Court PDF"),
          new_delivery_path,
          class: "inline-flex items-center justify-center rounded-lg bg-yellow-500 px-4 py-2 text-sm font-semibold text-gray-900 shadow hover:bg-yellow-400",
          data: { turbo_frame: "_top" } %>
      </div>
    </div>
  <% end %>
</div>
