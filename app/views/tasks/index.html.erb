<% content_for :page_title, (@customer ? "Tasks for #{@customer.name}" : "Tasks") %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <nav class="flex text-sm text-gray-500" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
              <span class="material-icons text-sm mr-1">home</span>
              Home
            <% end %>
          </li>
          <% if @customer %>
            <li>
              <div class="flex items-center">
                <span class="material-icons text-sm text-gray-400 mx-1">chevron_right</span>
                <%= link_to "Customers", customers_path, class: "text-gray-500 hover:text-gray-700" %>
              </div>
            </li>
            <li>
              <div class="flex items-center">
                <span class="material-icons text-sm text-gray-400 mx-1">chevron_right</span>
                <%= link_to @customer.name, customer_path(@customer), class: "text-gray-500 hover:text-gray-700" %>
              </div>
            </li>
          <% end %>
          <li>
            <div class="flex items-center">
              <span class="material-icons text-sm text-gray-400 mx-1">chevron_right</span>
              <span class="text-gray-700 font-medium">Tasks</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <%= turbo_stream_from "tasks" %>

  <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Tasks <%= "for #{@customer.name}" if @customer %></h2>
    </div>

    <% if @tasks.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Carrier</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody id="tasks" class="bg-white divide-y divide-gray-200">
            <%= render @tasks %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <span class="material-icons text-gray-400 text-4xl mb-2">task</span>
        <h3 class="text-sm font-medium text-gray-900 mb-1">No tasks</h3>
        <p class="text-sm text-gray-500">Get started by creating a new task.</p>
      </div>
    <% end %>
  </div>
</div>
