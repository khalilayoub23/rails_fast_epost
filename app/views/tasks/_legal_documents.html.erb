<div class="rounded-xl border border-white/10 bg-white/5 p-6">
  <h3 class="text-xl font-semibold text-white"><%= t("tasks.legal_documents_title", default: "Legal Documents") %></h3>
  <p class="mt-2 text-lg text-slate-300"><%= t("tasks.legal_documents_help", default: "Upload legal documents, court filings, or any related PDFs.") %></p>

  <div class="mt-5 space-y-4">
    <div class="hidden rounded-lg border border-white/10 bg-white/5 p-4"
         data-task-type-form-target="section"
         data-task-types="criminal_file_photocopying,traffic_file_photocopying,document_retrieval_from_government_agencies,court_filings,process_serving,filing_to_arbitration_mediation_centers">
      <p class="text-base font-semibold text-white"><%= t("tasks.power_of_attorney", default: "Power of Attorney (signed)") %></p>
      <p class="mt-1 text-sm text-slate-400"><%= t("tasks.power_of_attorney_help", default: "Required for this task type.") %></p>
      <div class="mt-3" data-controller="file-upload"
           data-file-upload-empty-label-value="<%= t("tasks.no_files_selected", default: "No files selected") %>"
           data-file-upload-selected-label-value="<%= t("tasks.files_selected", default: "%{count} files selected") %>">
        <%= f.file_field :power_of_attorney,
              accept: "application/pdf,image/*",
              data: { file_upload_target: "input", action: "change->file-upload#selectFiles" },
              class: "hidden" %>
        <div class="flex items-center gap-3">
          <button type="button"
                  data-action="click->file-upload#open"
                  class="inline-flex items-center rounded-lg bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300">
            <%= t("tasks.upload_poa_button", default: "Upload POA") %>
          </button>
          <span class="text-sm text-slate-300" data-file-upload-target="label"></span>
        </div>
      </div>
    </div>

    <div data-controller="file-upload"
         data-file-upload-empty-label-value="<%= t("tasks.no_files_selected", default: "No files selected") %>"
         data-file-upload-selected-label-value="<%= t("tasks.files_selected", default: "%{count} files selected") %>">
      <%= f.label :legal_files, t("tasks.legal_files", default: "Upload Files (PDF, Images)"), class: "mb-2 block text-lg font-semibold text-slate-200" %>
      <div class="flex items-center gap-3">
        <%= f.file_field :legal_files,
              multiple: true,
              accept: "application/pdf,image/*",
              data: { file_upload_target: "input", action: "change->file-upload#selectFiles" },
              class: "hidden" %>
        <button type="button"
                data-action="click->file-upload#open"
                class="inline-flex items-center rounded-lg bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300">
          <%= t("tasks.upload_files_button", default: "Choose files") %>
        </button>
        <span class="text-sm text-slate-300" data-file-upload-target="label"></span>
      </div>
      <p class="mt-2 text-base text-slate-400"><%= t("tasks.legal_files_help", default: "Select one or more files to upload (PDFs, images)") %></p>
    </div>

    <% if task.persisted? && task.legal_files.attached? %>
      <div class="space-y-2">
        <p class="text-sm font-semibold text-slate-200"><%= t("tasks.attached_files", default: "Attached Files:") %></p>
        <% task.legal_files.each do |file| %>
          <div class="flex items-center justify-between rounded-lg border border-white/10 bg-white/5 p-3">
            <div class="flex items-center gap-3">
              <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span class="text-sm text-white"><%= file.filename %></span>
              <span class="text-xs text-slate-400">(<%= number_to_human_size(file.byte_size) %>)</span>
            </div>
            <% if file.persisted? && file.blob&.persisted? %>
              <%= link_to t("tasks.view_file", default: "View"), rails_blob_path(file, disposition: "inline"),
                    target: "_blank",
                    class: "inline-flex items-center rounded-lg bg-yellow-400 px-3 py-1 text-xs font-semibold text-black hover:bg-yellow-300" %>
            <% else %>
              <span class="inline-flex items-center rounded-lg bg-white/10 px-3 py-1 text-xs font-semibold text-slate-300"><%= t("tasks.pending_upload", default: "Pending upload") %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
