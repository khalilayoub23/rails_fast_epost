<% content_for :page_title, t("tasks.edit_title", default: "Edit Task") %>

<div class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black py-10">
  <div class="container mx-auto max-w-5xl px-4">
    <%= render "form_card",
          title: t("tasks.edit", default: "Edit Task"),
          description: t("tasks.edit_description", default: "Update delivery details, assignees, or payment preferences."),
          back_path: tasks_path,
          header_right: t("tasks.case_number", default: "Task ##{@task.id}"),
          header_padding: "px-6 py-5",
          body_padding: "px-6 py-8" do %>
      <%= render "form", task: @task, payment_details: @payment_details %>
    <% end %>
  </div>
</div>
