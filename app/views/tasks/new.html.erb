<% content_for :page_title, t("tasks.new_title", default: "Create Task") %>

<div class="w-full">
  <%= render "form_card",
        title: t("tasks.new", default: "New Task"),
        description: t("tasks.new_description", default: "Fill in the delivery details below to create a new logistics task."),
        back_path: tasks_path do %>
    <div id="task-form">
      <%= render "form", task: @task %>
    </div>
  <% end %>
</div>
