<% content_for :page_title, t("tasks.new_title", default: "Create Task") %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black py-10">
  <div class="container mx-auto max-w-5xl px-4">
    <div class="mb-6">
      <%= link_to tasks_path, class: "inline-flex items-center text-sm font-semibold text-gray-300 hover:text-yellow-400" do %>
        <span class="material-icons mr-2 text-base">arrow_back</span>
        <%= t("common.back_to_list", default: "Back to tasks") %>
      <% end %>
    </div>

    <div class="rounded-2xl border border-gray-800 bg-gray-950/70 shadow-2xl backdrop-blur">
      <div class="border-b border-gray-800 px-6 py-5">
        <h1 class="text-2xl font-bold text-white"><%= t("tasks.new", default: "New Task") %></h1>
        <p class="mt-2 text-sm text-gray-400">
          <%= t("tasks.new_description", default: "Fill in the delivery details below to create a new logistics task.") %>
        </p>
      </div>
      <div class="px-6 py-8">
        <%= render "form", task: @task %>
      </div>
    </div>
  </div>
</div>
