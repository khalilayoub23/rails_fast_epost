<%= turbo_frame_tag payment do %>
  <tr class="border-b border-white/10 hover:bg-white/5 transition-colors">
    <td class="px-4 py-3">
      <%= link_to payment_path(payment), class: "font-medium text-yellow-300 hover:underline" do %>
        #<%= payment.id %>
      <% end %>
    </td>
    <td class="px-4 py-3 text-sm text-slate-300"><%= payment.provider.to_s.titleize.presence || "-" %></td>
    <td class="px-4 py-3"><%= render "shared/status_badge", status: payment.gateway_status %></td>
    <td class="px-4 py-3 text-sm text-slate-200">
      <% unit = payment.currency.to_s.upcase.presence || "USD" %>
      <%= payment.amount_cents ? number_to_currency(payment.amount_cents / 100.0, unit: unit) : "-" %>
    </td>
    <td class="px-4 py-3 text-sm text-slate-400"><%= payment.currency.to_s.upcase.presence || "-" %></td>
    <td class="px-4 py-3 text-right">
      <div class="flex items-center gap-2 justify-end">
        <%= link_to payment_path(payment), 
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-yellow-300 hover:bg-white/5 transition-colors",
            title: t("common.view") do %>
          <span class="material-icons text-xl">visibility</span>
        <% end %>
        
        <%= link_to edit_payment_path(payment),
            data: { turbo_frame: dom_id(payment) },
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-yellow-300 hover:bg-white/5 transition-colors",
            title: t("common.edit") do %>
          <span class="material-icons text-xl">edit</span>
        <% end %>
        
        <%= button_to payment_path(payment),
            method: :delete,
            data: { turbo_confirm: t("common.confirm_delete") },
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-red-300 hover:bg-red-500/10 transition-colors" do %>
          <span class="material-icons text-xl">delete</span>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
