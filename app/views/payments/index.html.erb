<% content_for :page_title, "Payments" %>

<div class="space-y-6">
	<div class="flex items-center justify-between">
		<div>
			<nav class="flex text-sm text-gray-500" aria-label="Breadcrumb">
				<ol class="inline-flex items-center space-x-1 md:space-x-3">
					<li class="inline-flex items-center">
						<%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
							<span class="material-icons text-sm mr-1">home</span>
							Home
						<% end %>
					</li>
					<li>
						<div class="flex items-center">
							<span class="material-icons text-sm text-gray-400 mx-1">chevron_right</span>
							<span class="text-gray-700 font-medium">Payments</span>
						</div>
					</li>
				</ol>
			</nav>
		</div>
	</div>

	<%= turbo_stream_from "payments" %>

	<div class="bg-white rounded-lg border border-gray-200 shadow-sm">
		<div class="px-6 py-4 border-b border-gray-200">
			<h2 class="text-lg font-semibold text-gray-900">All Payments</h2>
		</div>
		<div class="overflow-x-auto">
			<table class="min-w-full divide-y divide-gray-200">
				<thead class="bg-gray-50">
					<tr>
						<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
						<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
						<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
						<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
						<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Currency</th>
						<th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
					</tr>
				</thead>
				<tbody id="payments" class="bg-white divide-y divide-gray-200">
					<%= render @payments %>
				</tbody>
			</table>
		</div>
	</div>
</div>
