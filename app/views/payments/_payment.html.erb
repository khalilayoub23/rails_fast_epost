<tr id="<%= dom_id(payment) %>" class="border-b border-stroke hover:bg-gray-2">
  <td class="px-4 py-4">
    <%= link_to payment_path(payment), class: "text-sm font-medium text-primary hover:underline" do %>
      #<%= payment.id %>
    <% end %>
  </td>
  <td class="px-4 py-4 text-sm text-dark"><%= payment.provider.presence || "-" %></td>
  <td class="px-4 py-4"><%= render "shared/status_badge", status: payment.gateway_status %></td>
  <td class="px-4 py-4 text-sm text-dark"><%= payment.amount_cents ? ("%.2f" % (payment.amount_cents / 100.0)) : "-" %></td>
  <td class="px-4 py-4 text-sm text-body"><%= payment.currency %></td>
  <td class="px-4 py-4 text-right text-sm font-medium">
    <%= link_to 'View', payment_path(payment), class: "inline-flex items-center rounded border border-stroke px-3 py-1 text-sm font-medium text-dark hover:bg-whiter" %>
  </td>
</tr>
