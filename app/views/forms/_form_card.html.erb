<%= turbo_frame_tag form do %>
  <tr class="border-b border-white/10 hover:bg-white/5 transition-colors">
    <td class="px-4 py-3">
      <span class="font-medium text-slate-100">
        #<%= form.id %>
      </span>
    </td>
    <td class="px-4 py-3">
      <span class="text-slate-200">
        <%= form.form_template&.name || t("forms.no_template") %>
      </span>
    </td>
    <td class="px-4 py-3">
      <span class="text-slate-200">
        <%= form.created_at.strftime("%Y-%m-%d %H:%M") %>
      </span>
    </td>
    <td class="px-4 py-3 text-<%= margin_end_class %>">
      <div class="flex items-center gap-2 justify-end">
        <%= link_to customer_form_path(customer, form), 
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-yellow-300 hover:bg-white/5 transition-colors",
            title: t("common.view") do %>
          <span class="material-icons text-xl">visibility</span>
        <% end %>
        
        <%= link_to customer_form_path(customer, form, format: :pdf),
            target: "_blank",
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-yellow-300 hover:bg-white/5 transition-colors",
            title: t("forms.download_pdf") do %>
          <span class="material-icons text-xl">picture_as_pdf</span>
        <% end %>
        
        <%= link_to edit_customer_form_path(customer, form),
            data: { turbo_frame: dom_id(form) },
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-yellow-300 hover:bg-white/5 transition-colors",
            title: t("common.edit") do %>
          <span class="material-icons text-xl">edit</span>
        <% end %>
        
        <%= button_to customer_form_path(customer, form),
            method: :delete,
            data: { turbo_confirm: t("common.confirm_delete") },
            class: "inline-flex items-center justify-center rounded-lg p-2 text-slate-300 hover:text-red-300 hover:bg-white/5 transition-colors" do %>
          <span class="material-icons text-xl">delete</span>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
