<% parent = local_assigns.fetch(:parent) %>
<% notification_preference = local_assigns.fetch(:notification_preference) %>
<% form_url = if notification_preference.persisted?
  polymorphic_path([ parent, notification_preference ])
else
  polymorphic_path([ parent, :notification_preferences ])
end %>

<%= form_with(model: notification_preference, url: form_url, data: { turbo_frame: "notification-preferences" }) do |form| %>
  <div class="space-y-4">
    <div>
      <%= form.label :channel, "Channel", class: "block text-sm font-semibold text-slate-200" %>
      <%= form.select :channel, NotificationPreference.channels.keys.map { |c| [c.titleize, c] }, {}, class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div class="flex items-center space-x-2">
      <%= form.check_box :enabled, class: "h-4 w-4 rounded border-white/10 bg-white/5 text-yellow-400 focus:ring-2 focus:ring-yellow-400/30" %>
      <%= form.label :enabled, "Enabled", class: "text-sm text-slate-200" %>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <%= form.label :quiet_hours_start, "Quiet Hours Start", class: "block text-sm font-semibold text-slate-200" %>
        <%= form.number_field :quiet_hours_start, in: 0..23, class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
      </div>
      <div>
        <%= form.label :quiet_hours_end, "Quiet Hours End", class: "block text-sm font-semibold text-slate-200" %>
        <%= form.number_field :quiet_hours_end, in: 0..23, class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
      </div>
    </div>

    <p class="text-sm text-slate-300">
      SMS delivery requires configured `TWILIO_*` environment variables. Quiet hours are inclusive of the start hour and exclusive of the end hour.
    </p>

    <div class="flex space-x-3">
      <%= form.submit class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
      <%= link_to "Cancel", polymorphic_path([ parent, :notification_preferences ]), class: "inline-flex items-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    </div>
  </div>
<% end %>
