    <nav class="mt-5 py-4 px-4 lg:mt-9 lg:px-6">
      <div>
        <ul class="mb-6 flex flex-col gap-1.5">
          <li>
            <%= link_to root_path, class: "group relative flex items-center gap-2.5 rounded-md py-2 px-4 font-medium text-body duration-300 ease-in-out hover:bg-whiter #{'bg-whiter text-primary' if current_page?(root_path)}" do %>
              <span class="material-icons text-lg #{'text-primary' if current_page?(root_path)}">space_dashboard</span>
              Dashboard
            <% end %>
          </li>
          <% if current_user&.manager? %>
          <li>
            <%= link_to payments_path, class: "group relative flex items-center gap-2.5 rounded-md py-2 px-4 font-medium text-body duration-300 ease-in-out hover:bg-whiter #{'bg-whiter text-primary' if current_page?(payments_path)}" do %>
              <span class="material-icons text-lg #{'text-primary' if current_page?(payments_path)}">payment</span>
