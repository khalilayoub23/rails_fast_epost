            <% end %>
          </li>
          <% end %>
          <li>
            <%= link_to customers_path, class: "group relative flex items-center gap-2.5 rounded-md py-2 px-4 font-medium text-body duration-300 ease-in-out hover:bg-whiter #{'bg-whiter text-primary' if current_page?(customers_path)}" do %>
              <span class="material-icons text-lg #{'text-primary' if current_page?(customers_path)}">people</span>
