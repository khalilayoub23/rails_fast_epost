          <li class="mt-2 border-t border-stroke"></li>
          <li>
            <%= link_to profile_path, class: "group relative flex items-center gap-2.5 rounded-md py-2 px-4 font-medium text-body duration-300 ease-in-out hover:bg-whiter #{'bg-whiter text-primary' if current_page?(profile_path)}" do %>
              <span class="material-icons text-lg #{'text-primary' if current_page?(profile_path)}">person</span>
              Profile
            <% end %>
          </li>
          <li>
            <%= link_to settings_path, class: "group relative flex items-center gap-2.5 rounded-md py-2 px-4 font-medium text-body duration-300 ease-in-out hover:bg-whiter #{'bg-whiter text-primary' if current_page?(settings_path)}" do %>
              <span class="material-icons text-lg #{'text-primary' if current_page?(settings_path)}">settings</span>
              Settings
            <% end %>
          </li>
