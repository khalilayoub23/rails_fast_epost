<% raw_status = (local_assigns[:status] || "").to_s %>
<% label = raw_status.present? ? raw_status.humanize : "Unknown" %>
<%
	# TailAdmin-like badge colors
		variant_classes = case raw_status
			when "succeeded", "delivered" then "badge-success"
			when "pending", "in_transit" then "badge-warning"
			when "failed", "returned", "refunded", "canceled" then "badge-danger"
			else "badge-default"
		end
%>
<span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-medium <%= variant_classes %>"><%= label %></span>
