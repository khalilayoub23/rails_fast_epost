<% flash.each do |k, v| %>
  <div data-controller="flash"
       class="mb-6 rounded-lg border px-4 py-3 <%= k.to_s == "alert" ? "bg-red-50 border-red-200 text-red-800" : "bg-green-50 border-green-200 text-green-800" %>">
    <div class="flex items-center">
      <span class="material-icons text-lg mr-2"><%= k.to_s == "alert" ? "error" : "check_circle" %></span>
      <%= v %>
    </div>
  </div>
<% end %>
