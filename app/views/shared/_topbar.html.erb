<header class="sticky top-0 z-999 flex w-full border-b border-white/10 bg-slate-950/80 backdrop-blur drop-shadow-1" data-controller="ui-prefs">
  <div class="flex flex-grow items-center justify-between px-4 py-4 shadow-2 md:px-6 2xl:px-11">
    <div class="flex items-center gap-2 sm:gap-4 lg:hidden">
      <!-- Hamburger Toggle BTN -->
      <button class="z-99999 block rounded-xl border border-white/10 bg-white/5 p-1.5 shadow-sm lg:hidden hover:bg-white/10"
              data-action="click->sidebar#toggle">
        <span class="material-icons text-lg text-white">menu</span>
      </button>
      <!-- Hamburger Toggle BTN -->
      <%= link_to root_path, class: "flex items-center gap-2" do %>
        <%= brand_logo_tag(size: :sm) %>
      <% end %>
    </div>

    <% welcome_name = current_user&.full_name.presence %>
    <% welcome_name ||= (current_user&.lawyer? ? Lawyer.find_by(email: current_user.email)&.name : nil) %>
    <% welcome_name ||= current_user&.email.to_s.split("@").first.to_s.titleize.presence %>
    <% welcome_name ||= current_user&.email %>

    <div class="flex w-full items-center justify-between gap-4">
      <!-- Left: Welcome pill only -->
      <div class="hidden min-w-0 sm:flex">
        <div class="inline-flex max-w-96 items-center whitespace-normal break-words rounded-full border border-white/10 bg-white/5 px-4 py-2 text-sm font-semibold text-white shadow-card leading-snug">
          <div class="flex flex-col">
            <div class="text-sm font-semibold text-white"><%= welcome_name %></div>
            <div class="text-xs font-medium text-slate-300"><%= t("dashboard.welcome", default: "Welcome") %></div>
          </div>
        </div>
      </div>

      <!-- Center: Search -->
      <div class="flex flex-1 justify-center">
        <div class="hidden w-full max-w-xl items-center rounded-full border border-white/10 bg-white/5 px-3 py-2 shadow-card sm:flex" data-controller="search">
        <svg class="mr-2 fill-slate-400 hover:fill-yellow-300 cursor-pointer" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" data-action="click->search#search">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.16666 3.33332C5.945 3.33332 3.33332 5.945 3.33332 9.16666C3.33332 12.3883 5.945 15 9.16666 15C12.3883 15 15 12.3883 15 9.16666C15 5.945 12.3883 3.33332 9.16666 3.33332ZM1.66666 9.16666C1.66666 5.02452 5.02452 1.66666 9.16666 1.66666C13.3088 1.66666 16.6667 5.02452 16.6667 9.16666C16.6667 13.3088 13.3088 16.6667 9.16666 16.6667C5.02452 16.6667 1.66666 13.3088 1.66666 9.16666Z"/>
          <path fill-rule="evenodd" clip-rule="evenodd" d="M13.2857 13.2857C13.6112 12.9603 14.1388 12.9603 14.4642 13.2857L18.0892 16.9107C18.4147 17.2362 18.4147 17.7638 18.0892 18.0892C17.7638 18.4147 17.2362 18.4147 16.9107 18.0892L13.2857 14.4642C12.9603 14.1388 12.9603 13.6112 13.2857 13.2857Z"/>
        </svg>
        <input 
          type="text" 
          placeholder="<%= t('topbar.search_placeholder', default: 'Search or type command...') %>" 
          class="w-full bg-transparent text-white placeholder:text-slate-400 focus:outline-none xl:w-125" 
          data-search-target="input"
          data-action="keydown->search#handleEnter"
        />
        <span class="ml-2 hidden rounded-md border border-white/10 px-1.5 py-0.5 text-xs text-slate-300 sm:block">⌘K</span>
        </div>
      </div>

      <!-- Right: buttons (dark mode, cart, language, avatar) -->
      <div class="flex items-center justify-end gap-2">
        <button type="button"
                class="relative inline-flex h-[44px] w-[44px] items-center justify-center rounded-xl border border-yellow-400/60 bg-yellow-400 text-black hover:bg-yellow-300 transition-all"
                title="<%= t('topbar.theme', default: 'Dark mode') %>"
                data-action="click->ui-prefs#toggleDark">
          <span class="material-icons text-xl text-black">dark_mode</span>
        </button>

        <% if current_user&.manager? || current_user&.sender_role? || current_user&.lawyer? || current_user&.ecommerce_seller? %>
          <%= link_to cart_path,
                title: t('topbar.cart', default: 'Cart'),
                class: "relative inline-flex h-[44px] w-[44px] items-center justify-center rounded-xl border border-yellow-400/60 bg-yellow-400 text-black hover:bg-yellow-300 transition-all" do %>
            <span class="material-icons text-xl text-black">shopping_cart</span>
            <% if cart_item_count.positive? %>
              <span class="absolute -right-1 -top-1 inline-flex min-w-5 items-center justify-center rounded-full bg-black px-1.5 py-0.5 text-[10px] font-bold text-white">
                <%= cart_item_count %>
              </span>
            <% end %>
          <% end %>
        <% end %>

        <%= render "shared/locale_switcher" %>

        <div class="relative" data-controller="dropdown">
        <button class="relative inline-flex h-[44px] w-[44px] items-center justify-center rounded-xl border border-yellow-400/60 bg-yellow-400 text-black hover:bg-yellow-300 transition-all" data-action="click->dropdown#toggle" title="<%= t('topbar.user_menu', default: 'User menu') %>">
          <span class="material-icons text-xl text-black">person</span>

          <span class="pointer-events-none absolute left-1 top-1 inline-flex h-5 w-5 items-center justify-center rounded-md bg-black/10 text-black">
            <span class="material-icons" style="font-size: 14px">logout</span>
          </span>

          <span class="pointer-events-none absolute -bottom-1 -right-1 inline-flex h-4 w-4 items-center justify-center rounded-full bg-black text-[10px] font-bold text-white">
            ▾
          </span>
        </button>

  <div class="absolute right-0 mt-4 hidden w-62.5 flex-col rounded-xl border border-white/10 bg-slate-950/90 shadow-xl shadow-black/30 backdrop-blur" data-dropdown-target="menu">
          <ul class="flex flex-col gap-5 border-b border-white/10 px-6 py-7.5">
            <li>
              <%= link_to profile_path, class: "flex items-center gap-3.5 text-sm font-medium text-slate-200 duration-300 ease-in-out hover:text-yellow-300 lg:text-base" do %>
                <span class="material-icons text-lg">person</span>
                <%= t('topbar.my_profile', default: 'My Profile') %>
              <% end %>
            </li>
            <li>
              <%= link_to settings_path, class: "flex items-center gap-3.5 text-sm font-medium text-slate-200 duration-300 ease-in-out hover:text-yellow-300 lg:text-base" do %>
                <span class="material-icons text-lg">settings</span>
                <%= t('topbar.account_settings', default: 'Account Settings') %>
              <% end %>
            </li>
            <li>
              <%= button_to destroy_user_session_path,
                    method: :delete,
                    form: { class: "w-full text-left" },
                    class: "flex items-center gap-3.5 text-sm font-medium text-slate-200 duration-300 ease-in-out hover:text-red-300 lg:text-base" do %>
                <span class="material-icons text-lg">logout</span>
                <%= t('topbar.logout', default: 'Sign out') %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

      </div>
    </div>
  </div>
</header>
