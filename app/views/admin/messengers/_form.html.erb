<%# app/views/admin/messengers/_form.html.erb %>
<%= form_with model: [:admin, @messenger], local: true, class: 'space-y-6' do |f| %>
  <% if @messenger.errors.any? %>
    <div class="rounded-xl border border-red-500/30 bg-red-500/10 p-4 text-red-200">
      <h3 class="text-sm font-semibold text-red-200"><%= pluralize(@messenger.errors.count, "error") %> prohibited this messenger from being saved:</h3>
      <ul class="mt-2 list-disc pl-5 text-sm text-red-200 space-y-1">
        <% @messenger.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :name, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.email_field :email, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div>
      <%= f.label :phone, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.telephone_field :phone, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>

    <div>
      <%= f.label :employee_id, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :employee_id, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div>
      <%= f.label :carrier_id, "Carrier (Optional)", class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.collection_select :carrier_id, @carriers, :id, :name, { include_blank: "Independent" }, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.select :status, Messenger.statuses.map { |k, _v| [k.titleize, k] }, {}, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>

    <div>
      <%= f.label :vehicle_type, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.select :vehicle_type, Messenger.vehicle_types.map { |k, _v| [k.titleize, k] }, { include_blank: "Select Vehicle" }, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div>
      <%= f.label :license_plate, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :license_plate, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>

    <div>
      <%= f.label :license_number, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :license_number, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm font-semibold text-slate-200 mb-2" %>
    <%= f.text_area :notes, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", rows: 3 %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.submit class: "inline-flex items-center rounded-xl bg-yellow-400 px-5 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= link_to "Cancel", admin_messengers_path, class: "inline-flex items-center rounded-xl bg-white/10 px-5 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
  </div>
<% end %>
