<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white"><%= @document_template.name %></h1>
        <p class="mt-2 text-sm text-slate-300">
          <%= @document_template.description %>
        </p>
      </div>
      <%= link_to "Back to Template", admin_document_template_path(@document_template), class: "inline-flex items-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    </div>
  </div>

  <!-- Template Info -->
  <div class="rounded-2xl border border-sky-500/30 bg-sky-500/10 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-sky-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-semibold text-sky-200">Fill in the required information</h3>
        <div class="mt-2 text-sm text-sky-200/80">
          <p>Complete all required fields marked with an asterisk (*) to generate your document.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Generation Form -->
  <%= form_with url: generate_admin_document_template_path(@document_template), method: :post, local: true, class: "space-y-6" do |form| %>
    
    <!-- Variable Fields -->
    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <h2 class="text-lg font-semibold text-white mb-6">Document Variables</h2>
      
      <% if @document_template.variables.present? %>
        <div class="space-y-6">
          <% @document_template.variables.each do |var_name, var_config| %>
            <div>
              <%= label_tag "variables[#{var_name}]", var_config["label"] || var_name.titleize, class: "block text-sm font-medium text-slate-200" do %>
                <%= var_config["label"] || var_name.titleize %>
                <% if var_config["required"] %>
                  <span class="text-red-500">*</span>
                <% end %>
              <% end %>
              
              <% case var_config["type"] %>
              <% when "text", "textarea" %>
                <%= text_area_tag "variables[#{var_name}]", nil, 
                  rows: 3,
                  required: var_config["required"],
                  placeholder: "Enter #{var_config["label"] || var_name.titleize.downcase}",
                  class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
              <% when "date" %>
                <%= date_field_tag "variables[#{var_name}]", nil,
                  required: var_config["required"],
                  class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
              <% when "number" %>
                <%= number_field_tag "variables[#{var_name}]", nil,
                  required: var_config["required"],
                  step: "0.01",
                  placeholder: "Enter #{var_config["label"] || var_name.titleize.downcase}",
                  class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
              <% else %>
                <%= text_field_tag "variables[#{var_name}]", nil,
                  required: var_config["required"],
                  placeholder: "Enter #{var_config["label"] || var_name.titleize.downcase}",
                  class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
              <% end %>
              
              <% if var_config["description"] %>
                <p class="mt-1 text-sm text-slate-400"><%= var_config["description"] %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-2 text-sm font-semibold text-white">No variables defined</h3>
          <p class="mt-1 text-sm text-slate-300">This template doesn't require any variable input.</p>
        </div>
      <% end %>
    </div>

    <!-- Output Options -->
    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <h2 class="text-lg font-semibold text-white mb-4">Output Options</h2>
      
      <div class="space-y-4">
        <div>
          <%= label_tag :filename, "Filename (optional)", class: "block text-sm font-medium text-slate-200" %>
          <%= text_field_tag :filename, nil,
            placeholder: "e.g., power-of-attorney-john-doe",
            class: "mt-1 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
          <p class="mt-1 text-sm text-slate-400">Leave blank to use the template name. Extension will be added automatically.</p>
        </div>

        <div class="rounded-xl bg-yellow-500/10 border border-yellow-500/30 p-4">
          <p class="text-sm text-yellow-200">
            Need to upload or replace the template PDF? Use <%= link_to "Edit Template", edit_admin_document_template_path(@document_template), class: "font-semibold underline" %> to attach a PDF; generated files will use the content stored on that edit page.
          </p>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between space-x-4">
      <%= link_to "Cancel", admin_document_template_path(@document_template), 
        class: "inline-flex items-center rounded-xl bg-white/10 px-6 py-3 text-base font-semibold text-white hover:bg-white/15" %>
      
      <div class="flex space-x-4">
        <%= button_tag type: "submit", name: "mode", value: "preview",
          class: "inline-flex items-center rounded-xl bg-white/10 px-6 py-3 text-base font-semibold text-white hover:bg-white/15" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
          </svg>
          Preview PDF
        <% end %>
        
        <%= button_tag type: "submit", name: "mode", value: "download",
          class: "inline-flex items-center rounded-xl bg-yellow-400 px-6 py-3 text-base font-semibold text-black hover:bg-yellow-300" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Generate & Download
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Template Content Preview -->
  <% if @document_template.content.present? %>
    <div class="mt-8 rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <h2 class="text-lg font-semibold text-white mb-4">Template Preview</h2>
      <div class="prose prose-sm max-w-none">
        <div class="rounded-xl border border-white/10 bg-black/30 p-4 font-mono text-xs text-slate-200 overflow-x-auto">
          <%= simple_format(@document_template.content) %>
        </div>
      </div>
      <p class="mt-2 text-xs text-slate-400">
        Variables in the format {{variable_name}} will be replaced with your input values.
      </p>
    </div>
  <% end %>
</div>
