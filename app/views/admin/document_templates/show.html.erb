<div class="container mx-auto px-4 py-8">
  <div class="mb-6 flex justify-between items-center">
    <%= link_to "â† Back to Templates", admin_document_templates_path, class: "text-sm text-slate-200 hover:text-white" %>
    <div class="flex gap-2">
      <%= link_to new_generate_admin_document_template_path(@document_template), class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Generate Document
      <% end %>
      <%= link_to "Edit", edit_admin_document_template_path(@document_template), class: "inline-flex items-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    </div>
  </div>

  <div class="rounded-2xl border border-white/10 bg-white/5 p-8 shadow-xl shadow-black/30 backdrop-blur">
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold text-white"><%= @document_template.name %></h1>
      <span class="<%= @document_template.active? ? 'bg-emerald-500/15 text-emerald-200' : 'bg-white/10 text-slate-200' %> text-sm font-semibold px-3 py-1 rounded">
        <%= @document_template.active? ? 'Active' : 'Inactive' %>
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div>
        <h3 class="text-sm font-medium text-slate-400 mb-1">Template Type</h3>
        <p class="text-lg text-white"><%= @document_template.template_type.titleize %></p>
      </div>

      <% if @document_template.category.present? %>
        <div>
          <h3 class="text-sm font-medium text-slate-400 mb-1">Category</h3>
          <p class="text-lg text-white"><%= @document_template.category %></p>
        </div>
      <% end %>
    </div>

    <% if @document_template.description.present? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-slate-400 mb-2">Description</h3>
        <p class="text-slate-200"><%= @document_template.description %></p>
      </div>
    <% end %>

    <% if @document_template.pdf_file.attached? %>
      <div class="mb-8 rounded-xl border border-white/10 bg-white/5 p-4">
        <h3 class="text-sm font-semibold text-white mb-2">ðŸ“„ Attached PDF Template</h3>
        <p class="text-white font-medium"><%= @document_template.pdf_file.filename %></p>
        <p class="text-sm text-slate-300 mt-1">Size: <%= @document_template.file_size %></p>
        <div class="mt-4 flex gap-3">
          <%= link_to "Preview PDF", preview_admin_document_template_path(@document_template), target: "_blank", class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300" %>
          <%= link_to "Download PDF", download_admin_document_template_path(@document_template), class: "inline-flex items-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
        </div>
      </div>
    <% end %>

    <% if @document_template.content.present? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-slate-400 mb-2">Template Content</h3>
        <pre class="rounded-xl border border-white/10 bg-black/30 p-4 overflow-x-auto text-sm font-mono text-slate-200 whitespace-pre-wrap"><%= @document_template.content %></pre>
      </div>
    <% end %>

    <% if @document_template.variables.present? && @document_template.variables.any? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-slate-400 mb-3">Template Variables</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @document_template.variables.each do |var_name, var_config| %>
            <div class="rounded-xl border border-white/10 bg-white/5 p-3">
              <p class="font-mono text-sm text-yellow-300">{{<%= var_name %>}}</p>
              <p class="text-xs text-slate-300 mt-1"><%= var_config["label"] || var_name.titleize %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 pt-6 border-t border-white/10">
      <h3 class="text-sm font-medium text-slate-400 mb-3">Template Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div>
          <span class="text-slate-300">Created:</span>
          <span class="text-white ml-2"><%= @document_template.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
        <div>
          <span class="text-slate-300">Last Updated:</span>
          <span class="text-white ml-2"><%= @document_template.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
