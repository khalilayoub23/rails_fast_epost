<div class="container mx-auto px-4 py-8">
  <div class="mb-6 flex justify-between items-center">
    <%= link_to "← Back to Templates", admin_document_templates_path, class: "text-blue-600 hover:text-blue-800" %>
    <div class="flex gap-2">
      <%= link_to new_generate_admin_document_template_path(@document_template), class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Generate Document
      <% end %>
      <%= link_to "Edit", edit_admin_document_template_path(@document_template), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
      <%= button_to "Delete", admin_document_template_path(@document_template), method: :delete, 
          data: { confirm: "Are you sure you want to delete this template?" },
          class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold text-gray-900"><%= @document_template.name %></h1>
      <span class="<%= @document_template.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %> text-sm font-semibold px-3 py-1 rounded">
        <%= @document_template.active? ? 'Active' : 'Inactive' %>
      </span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div>
        <h3 class="text-sm font-medium text-gray-500 mb-1">Template Type</h3>
        <p class="text-lg text-gray-900"><%= @document_template.template_type.titleize %></p>
      </div>

      <% if @document_template.category.present? %>
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Category</h3>
          <p class="text-lg text-gray-900"><%= @document_template.category %></p>
        </div>
      <% end %>
    </div>

    <% if @document_template.description.present? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-gray-500 mb-2">Description</h3>
        <p class="text-gray-700"><%= @document_template.description %></p>
      </div>
    <% end %>

    <% if @document_template.pdf_file.attached? %>
      <div class="mb-8 p-4 bg-blue-50 rounded-lg">
        <h3 class="text-sm font-medium text-gray-700 mb-2">📄 Attached PDF Template</h3>
        <p class="text-gray-900 font-medium"><%= @document_template.pdf_file.filename %></p>
        <p class="text-sm text-gray-600 mt-1">Size: <%= @document_template.file_size %></p>
        <div class="mt-4 flex gap-3">
          <%= link_to "Preview PDF", preview_admin_document_template_path(@document_template), target: "_blank", class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded" %>
          <%= link_to "Download PDF", download_admin_document_template_path(@document_template), class: "bg-gray-600 hover:bg-gray-700 text-white text-sm font-semibold py-2 px-4 rounded" %>
        </div>
      </div>
    <% end %>

    <% if @document_template.content.present? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-gray-500 mb-2">Template Content</h3>
        <pre class="bg-gray-50 p-4 rounded-lg overflow-x-auto text-sm font-mono whitespace-pre-wrap"><%= @document_template.content %></pre>
      </div>
    <% end %>

    <% if @document_template.variables.present? && @document_template.variables.any? %>
      <div class="mb-8">
        <h3 class="text-sm font-medium text-gray-500 mb-3">Template Variables</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @document_template.variables.each do |var_name, var_config| %>
            <div class="bg-gray-50 p-3 rounded">
              <p class="font-mono text-sm text-blue-600">{{<%= var_name %>}}</p>
              <p class="text-xs text-gray-600 mt-1"><%= var_config["label"] || var_name.titleize %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-8 pt-6 border-t">
      <h3 class="text-sm font-medium text-gray-500 mb-3">Template Information</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div>
          <span class="text-gray-600">Created:</span>
          <span class="text-gray-900 ml-2"><%= @document_template.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
        <div>
          <span class="text-gray-600">Last Updated:</span>
          <span class="text-gray-900 ml-2"><%= @document_template.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
