<%= form_with(model: [:admin, document_template], class: "space-y-6") do |form| %>
  <% if document_template.errors.any? %>
    <div class="rounded-xl border border-red-500/30 bg-red-500/10 px-4 py-3 text-red-200">
      <h3 class="font-bold"><%=  pluralize(document_template.errors.count, "error") %> prohibited this template from being saved:</h3>
      <ul class="list-disc list-inside mt-2">
        <% document_template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Template Name", class: "block text-sm font-medium text-slate-200 mb-1" %>
    <%= form.text_field :name, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "e.g., Power of Attorney" %>
  </div>

  <div>
    <%= form.label :description, "Description", class: "block text-sm font-medium text-slate-200 mb-1" %>
    <%= form.text_area :description, rows: 3, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "Describe this template's purpose..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :template_type, "Template Type", class: "block text-sm font-medium text-slate-200 mb-1" %>
      <%= form.select :template_type, 
          options_for_select([
            ["Prawn Template (Generate from Text)", "prawn_template"],
            ["Fillable Form (Fill PDF Fields)", "fillable_form"],
            ["Hybrid (Both)", "hybrid"]
          ], document_template.template_type),
          {},
          class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
      <p class="mt-1 text-sm text-slate-400">Choose how PDFs will be generated</p>
    </div>

    <div>
      <%= form.label :category, "Category", class: "block text-sm font-medium text-slate-200 mb-1" %>
      <%= form.select :category,
          options_for_select([["Select a category", ""]] + DocumentTemplate::CATEGORIES, document_template.category),
          {},
          class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
  </div>

  <div>
    <%= form.label :active, class: "flex items-center" do %>
      <%= form.check_box :active, class: "rounded border-white/10 bg-white/5 text-yellow-400 shadow-sm focus:ring-2 focus:ring-yellow-400/30" %>
      <span class="ml-2 text-sm text-slate-200">Active (template can be used)</span>
    <% end %>
  </div>

  <div>
    <%= form.label :content, "Template Content (for Prawn templates)", class: "block text-sm font-medium text-slate-200 mb-1" %>
    <%= form.text_area :content, rows: 12, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 font-mono text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "Use {{variable_name}} for dynamic content...\n\nExample:\n# Power of Attorney\n\nI, {{principal_name}}, hereby appoint {{agent_name}} as my attorney-in-fact..." %>
    <p class="mt-1 text-sm text-slate-400">Use {{variable_name}} syntax for placeholders. Supports Markdown-style headers with #.</p>
  </div>

  <div>
    <%= form.label :pdf_file, "Upload PDF Template (for Fillable Forms)", class: "block text-sm font-medium text-slate-200 mb-1" %>
    <%= form.file_field :pdf_file, accept: "application/pdf", class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white file:mr-4 file:rounded-lg file:border-0 file:bg-white/10 file:px-3 file:py-2 file:text-sm file:font-semibold file:text-white hover:file:bg-white/15" %>
    <% if document_template.pdf_file.attached? %>
      <p class="mt-2 text-sm text-emerald-300">âœ“ Current file: <%= document_template.pdf_file.filename %> (<%= document_template.file_size %>)</p>
    <% end %>
  </div>

  <div class="flex justify-end gap-3 pt-4">
    <%= link_to "Cancel", admin_document_templates_path, class: "inline-flex items-center rounded-xl bg-white/10 px-6 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    <%= form.submit "Save Template", class: "inline-flex items-center rounded-xl bg-yellow-400 px-6 py-2 text-sm font-semibold text-black hover:bg-yellow-300" %>
  </div>
<% end %>
