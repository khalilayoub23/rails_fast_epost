<div class="p-6">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-white">CRM Integrations</h1>
    <p class="mt-1 text-sm text-slate-400">Monitor customer relationship management system connections.</p>
  </div>

  <!-- Integration Status Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- HubSpot Card -->
    <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur">
      <div class="px-6 py-4 border-b border-white/10 flex items-center justify-between">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.5 2h-13A3.5 3.5 0 002 5.5v13A3.5 3.5 0 005.5 22h13a3.5 3.5 0 003.5-3.5v-13A3.5 3.5 0 0018.5 2zm-1.4 14.9c-.4.4-1 .6-1.6.6s-1.2-.2-1.6-.6c-.4-.4-.6-1-.6-1.6v-2.6h-2.6c-.6 0-1.2-.2-1.6-.6-.4-.4-.6-1-.6-1.6s.2-1.2.6-1.6c.4-.4 1-.6 1.6-.6h2.6V5.7c0-.6.2-1.2.6-1.6.4-.4 1-.6 1.6-.6s1.2.2 1.6.6c.4.4.6 1 .6 1.6v2.6h2.6c.6 0 1.2.2 1.6.6.4.4.6 1 .6 1.6s-.2 1.2-.6 1.6c-.4.4-1 .6-1.6.6h-2.6v2.6c0 .6-.2 1.2-.6 1.6z"/>
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-white">HubSpot CRM</h2>
        </div>
        <span class="px-3 py-1 text-xs font-semibold rounded-full <%= @stats[:hubspot][:success_rate] > 80 ? 'bg-emerald-500/15 text-emerald-200' : 'bg-yellow-500/15 text-yellow-200' %>">
          <%= @stats[:hubspot][:success_rate] %>% Success
        </span>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <p class="text-sm text-slate-300">Total Events</p>
            <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:hubspot][:total_events]) %></p>
          </div>
          <div>
            <p class="text-sm text-slate-300">Last 24 Hours</p>
            <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:hubspot][:last_24h]) %></p>
          </div>
        </div>
        <% if @stats[:hubspot][:last_event] %>
          <div class="text-sm text-slate-200 border-t border-white/10 pt-3">
            <p>Last event: <%= time_ago_in_words(@stats[:hubspot][:last_event].created_at) %> ago</p>
            <p class="text-xs text-slate-400 mt-1">Event type: <%= @stats[:hubspot][:last_event].event_type %></p>
          </div>
        <% else %>
          <div class="text-sm text-slate-300 border-t border-white/10 pt-3">
            No events recorded yet
          </div>
        <% end %>
      </div>
    </div>

    <!-- Odoo Card -->
    <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur">
      <div class="px-6 py-4 border-b border-white/10 flex items-center justify-between">
        <div class="flex items-center">
          <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-white">Odoo CRM</h2>
          <span class="ml-2 px-2 py-0.5 text-xs font-semibold bg-emerald-500/15 text-emerald-200 rounded">Open Source</span>
        </div>
        <span class="px-3 py-1 text-xs font-semibold rounded-full <%= @stats[:odoo][:success_rate] > 80 ? 'bg-emerald-500/15 text-emerald-200' : 'bg-yellow-500/15 text-yellow-200' %>">
          <%= @stats[:odoo][:success_rate] %>% Success
        </span>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <p class="text-sm text-slate-300">Total Events</p>
            <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:odoo][:total_events]) %></p>
          </div>
          <div>
            <p class="text-sm text-slate-300">Last 24 Hours</p>
            <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:odoo][:last_24h]) %></p>
          </div>
        </div>
        <% if @stats[:odoo][:last_event] %>
          <div class="text-sm text-slate-200 border-t border-white/10 pt-3">
            <p>Last event: <%= time_ago_in_words(@stats[:odoo][:last_event].created_at) %> ago</p>
            <p class="text-xs text-slate-400 mt-1">Event type: <%= @stats[:odoo][:last_event].event_type %></p>
          </div>
        <% else %>
          <div class="text-sm text-slate-300 border-t border-white/10 pt-3">
            No events recorded yet
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Customer Sync Statistics -->
  <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur mb-8">
    <div class="px-6 py-4 border-b border-white/10">
      <h2 class="text-lg font-semibold text-white">Customer Synchronization</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-white"><%= number_with_delimiter(@stats[:customer_sync][:total_customers]) %></div>
          <div class="text-sm text-slate-300 mt-1">Total Customers</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white"><%= number_with_delimiter(@stats[:customer_sync][:hubspot_synced]) %></div>
          <div class="text-sm text-slate-300 mt-1">CRM Synced</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-yellow-200"><%= number_with_delimiter(@stats[:customer_sync][:sync_pending]) %></div>
          <div class="text-sm text-slate-300 mt-1">Pending Tasks</div>
        </div>
        <div class="text-center">
          <div class="text-sm font-semibold text-white">
            <% if @stats[:customer_sync][:last_sync] %>
              <%= time_ago_in_words(@stats[:customer_sync][:last_sync]) %> ago
            <% else %>
              Never
            <% end %>
          </div>
          <div class="text-sm text-slate-300 mt-1">Last Sync</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Integration Events -->
  <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur">
    <div class="px-6 py-4 border-b border-white/10 flex items-center justify-between">
      <h2 class="text-lg font-semibold text-white">Recent Integration Events</h2>
      <%= link_to "View All", admin_monitoring_webhooks_path, class: "text-sm font-semibold text-yellow-200 hover:text-yellow-100" %>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-white/10">
        <thead class="bg-white/5">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Source</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Event Type</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Status</th>
            <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Time</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
          <% @stats[:recent_events].each do |event| %>
            <tr class="hover:bg-white/5">
              <td class="px-6 py-4 whitespace-nowrap">
                <% source = event.payload["source"] || "unknown" %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold <%= source == 'hubspot' ? 'bg-yellow-500/15 text-yellow-200' : 'bg-white/10 text-slate-200' %>">
                  <%= source.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200">
                <%= event.event_type %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if event.error_message.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-500/15 text-red-200">
                    Error
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-emerald-500/15 text-emerald-200">
                    Success
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                <%= time_ago_in_words(event.created_at) %> ago
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Integration Setup Instructions -->
  <div class="mt-8 rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
    <h3 class="text-lg font-semibold text-white mb-4">Integration Setup</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h4 class="font-semibold text-white mb-2">HubSpot Webhook URL</h4>
        <code class="block rounded-xl border border-white/10 bg-black/40 px-3 py-2 text-sm text-slate-200 break-all">
          <%= request.base_url %>/api/v1/integrations/hubspot
        </code>
        <p class="text-sm text-slate-300 mt-2">Configure this URL in your HubSpot workflow settings.</p>
      </div>
      <div>
        <h4 class="font-semibold text-white mb-2">Odoo Webhook URL</h4>
        <code class="block rounded-xl border border-white/10 bg-black/40 px-3 py-2 text-sm text-slate-200 break-all">
          <%= request.base_url %>/api/v1/integrations/odoo
        </code>
        <p class="text-sm text-slate-300 mt-2">Add X-Odoo-Api-Key header with your API key.</p>
      </div>
    </div>
  </div>
</div>
