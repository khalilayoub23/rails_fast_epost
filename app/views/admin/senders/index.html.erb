<%# app/views/admin/senders/index.html.erb %>
<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-bold text-white">Senders</h1>
    <p class="mt-1 text-sm text-slate-400">Manage sender profiles and view ratings.</p>
  </div>

  <%= link_to "New Sender", new_admin_sender_path,
              class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
</div>

<div class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-xl shadow-black/30 backdrop-blur mb-6">
  <%= form_with url: admin_senders_path, method: :get, local: true, class: "flex flex-wrap items-center gap-3" do |f| %>
    <%= f.label :search, "Search", class: "sr-only" %>
    <%= f.text_field :search,
                     value: params[:search],
                     placeholder: "Name, email, company...",
                     class: "w-full md:w-80 rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= f.select :sender_type,
                 Sender.sender_types.map { |k, _v| [k.titleize, k] },
                 { include_blank: "All Types" },
                 class: "w-full md:w-56 rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= f.submit "Filter", class: "inline-flex items-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
  <% end %>
</div>

<div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-white/10">
      <thead class="bg-white/5">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Name</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Type</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Email</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Phone</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Company</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Tasks</th>
          <th class="px-4 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Carrier Score</th>
          <th class="px-4 py-3 text-right text-xs font-semibold uppercase tracking-wide text-slate-300">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/10">
        <% if @senders.any? %>
          <% @senders.each do |sender| %>
            <tr class="hover:bg-white/5">
              <td class="px-4 py-3 text-sm font-semibold text-white">
                <%= link_to sender.display_name, admin_sender_path(sender), class: "text-yellow-200 hover:text-yellow-100" %>
              </td>
              <td class="px-4 py-3 text-sm">
                <span class="inline-flex items-center rounded-full bg-white/10 px-2.5 py-1 text-xs font-semibold text-slate-200"><%= sender.sender_type.titleize %></span>
              </td>
              <td class="px-4 py-3 text-sm text-slate-200"><%= sender.email %></td>
              <td class="px-4 py-3 text-sm text-slate-200"><%= sender.phone %></td>
              <td class="px-4 py-3 text-sm text-slate-200"><%= sender.company_name %></td>
              <td class="px-4 py-3 text-sm text-slate-200"><%= sender.tasks.count %></td>
              <td class="px-4 py-3 text-sm text-slate-200"><%= display_rating(sender.carrier_overall_score&.to_f) %></td>
              <td class="px-4 py-3 text-right text-sm">
                <div class="inline-flex items-center gap-2">
                  <%= link_to "Edit", edit_admin_sender_path(sender), class: "inline-flex items-center rounded-lg bg-white/10 px-3 py-1.5 text-xs font-semibold text-white hover:bg-white/15" %>
                  <%= link_to "Delete", admin_sender_path(sender), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center rounded-lg bg-red-500/15 px-3 py-1.5 text-xs font-semibold text-red-200 hover:bg-red-500/20" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-4 py-10 text-center text-sm text-slate-300">
              No senders match your filters yet.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
