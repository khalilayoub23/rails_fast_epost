<%# app/views/admin/senders/_form.html.erb %>
<%= form_with model: [:admin, @sender], local: true, class: 'space-y-6' do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :name, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>
    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.email_field :email, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
    <div>
      <%= f.label :phone, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.telephone_field :phone, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>
    <div>
      <%= f.label :sender_type, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.select :sender_type, Sender.sender_types.map { |k, _v| [k.titleize, k] }, {}, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>
  </div>

  <div>
    <%= f.label :address, class: "block text-sm font-semibold text-slate-200 mb-2" %>
    <%= f.text_area :address, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true, rows: 2 %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :company_name, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :company_name, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
    <div>
      <%= f.label :tax_id, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :tax_id, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
    <div>
      <%= f.label :business_registration, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :business_registration, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    </div>
    <div>
      <%= f.label :notes, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_area :notes, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", rows: 2 %>
    </div>
  </div>

  <div class="flex items-center gap-2">
    <%= f.submit class: "inline-flex items-center rounded-xl bg-yellow-400 px-5 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= link_to "Cancel", admin_senders_path, class: "inline-flex items-center rounded-xl bg-white/10 px-5 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
  </div>
<% end %>
