<% content_for :page_title do %>
  Admin Dashboard
<% end %>

<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <h2 class="text-2xl font-bold text-white">Admin Overview</h2>
</div>

<div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-3 2xl:gap-7.5">
  <div class="rounded-2xl border border-white/10 bg-white/5 px-6 py-5 shadow-xl shadow-black/30 backdrop-blur">
    <div class="flex items-center gap-3">
      <span class="material-icons text-yellow-300">payments</span>
      <div>
        <p class="text-sm text-slate-300">Payments</p>
        <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@payments_count) %></p>
      </div>
    </div>
  </div>

  <div class="rounded-2xl border border-white/10 bg-white/5 px-6 py-5 shadow-xl shadow-black/30 backdrop-blur">
    <div class="flex items-center gap-3">
      <span class="material-icons text-yellow-300">groups</span>
      <div>
        <p class="text-sm text-slate-300">Customers</p>
        <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@customers_count) %></p>
      </div>
    </div>
  </div>

  <div class="rounded-2xl border border-white/10 bg-white/5 px-6 py-5 shadow-xl shadow-black/30 backdrop-blur">
    <div class="flex items-center gap-3">
      <span class="material-icons text-yellow-300">trending_up</span>
      <div>
        <p class="text-sm text-slate-300">Revenue (all time)</p>
        <p class="text-2xl font-bold text-white">$<%= number_with_delimiter(@revenue_total_cents / 100.0) %></p>
      </div>
    </div>
  </div>
</div>
