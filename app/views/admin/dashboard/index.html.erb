<% content_for :title, "Admin Â· Dashboard" %>
<% content_for :page_title do %>
  Admin Dashboard
<% end %>

<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <h2 class="text-title-md2 font-bold text-black dark:text-white">
    Admin Overview
  </h2>
</div>

<div class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-3 2xl:gap-7.5">
  <div class="rounded-sm border border-stroke bg-white px-7.5 py-6 shadow-default dark:border-strokedark dark:bg-boxdark">
    <div class="flex items-center gap-3">
      <span class="material-icons text-primary">payments</span>
      <div>
        <p class="text-sm">Payments</p>
        <p class="text-title-md font-bold text-black dark:text-white"><%= number_with_delimiter(@payments_count) %></p>
      </div>
    </div>
  </div>

  <div class="rounded-sm border border-stroke bg-white px-7.5 py-6 shadow-default dark:border-strokedark dark:bg-boxdark">
    <div class="flex items-center gap-3">
      <span class="material-icons text-secondary">groups</span>
      <div>
        <p class="text-sm">Customers</p>
        <p class="text-title-md font-bold text-black dark:text-white"><%= number_with_delimiter(@customers_count) %></p>
      </div>
    </div>
  </div>

  <div class="rounded-sm border border-stroke bg-white px-7.5 py-6 shadow-default dark:border-strokedark dark:bg-boxdark">
    <div class="flex items-center gap-3">
      <span class="material-icons text-success">trending_up</span>
      <div>
        <p class="text-sm">Revenue (all time)</p>
        <p class="text-title-md font-bold text-black dark:text-white">$<%= number_with_delimiter(@revenue_total_cents / 100.0) %></p>
      </div>
    </div>
  </div>
</div>
