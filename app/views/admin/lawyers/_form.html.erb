<%= form_with model: [:admin, @lawyer], class: "space-y-6" do |f| %>
  <% if @lawyer.errors.any? %>
    <div class="rounded-xl border border-red-500/30 bg-red-500/10 p-4 text-red-200">
      <h3 class="text-sm font-semibold text-red-200"><%= pluralize(@lawyer.errors.count, "error") %> prohibited this lawyer from being saved:</h3>
      <ul class="mt-2 list-disc pl-5 text-sm text-red-200 space-y-1">
        <% @lawyer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :name, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "John Doe", required: true %>
    </div>
    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.email_field :email, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "john.doe@lawfirm.com", required: true %>
    </div>
    <div>
      <%= f.label :phone, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.telephone_field :phone, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "+1 (555) 123-4567", required: true %>
    </div>
    <div>
      <%= f.label :license_number, "License Number", class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :license_number, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm font-mono text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "LAW-2023-001", required: true %>
    </div>
    <div>
      <%= f.label :specialization, class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.select :specialization, Lawyer.specializations.keys.map { |k| [k.titleize, k] }, { include_blank: "Select specialization" }, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30", required: true %>
    </div>
    <div>
      <%= f.label :bar_association, "Bar Association", class: "block text-sm font-semibold text-slate-200 mb-2" %>
      <%= f.text_field :bar_association, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "State Bar Association" %>
    </div>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm font-semibold text-slate-200 mb-2" %>
    <%= f.text_area :notes, rows: 4, class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30", placeholder: "Additional notes about the lawyer..." %>
  </div>

  <div class="flex items-center gap-2">
    <%= f.check_box :active, class: "h-4 w-4 rounded border-white/10 bg-white/5 text-yellow-400 focus:ring-2 focus:ring-yellow-400/30" %>
    <%= f.label :active, "Active (can be assigned to tasks)", class: "text-sm text-slate-200" %>
  </div>

  <div class="flex items-center justify-end gap-2 pt-4 border-t border-white/10">
    <%= link_to "Cancel", @lawyer.persisted? ? admin_lawyer_path(@lawyer) : admin_lawyers_path, class: "inline-flex items-center rounded-xl bg-white/10 px-5 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    <%= f.submit @lawyer.persisted? ? "Update Lawyer" : "Create Lawyer", class: "inline-flex items-center rounded-xl bg-yellow-400 px-5 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
  </div>
<% end %>
