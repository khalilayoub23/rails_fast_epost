<div class="bg-white rounded-lg shadow-sm p-6">
  <%= form_with model: [:admin, @lawyer], class: "space-y-6" do |f| %>
    <% if @lawyer.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@lawyer.errors.count, "error") %> prohibited this lawyer from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @lawyer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Name -->
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "John Doe",
            required: true %>
      </div>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "john.doe@lawfirm.com",
            required: true %>
      </div>

      <!-- Phone -->
      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.telephone_field :phone, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "+1 (555) 123-4567",
            required: true %>
      </div>

      <!-- License Number -->
      <div>
        <%= f.label :license_number, "License Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :license_number, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "LAW-2023-001",
            required: true %>
      </div>

      <!-- Specialization -->
      <div>
        <%= f.label :specialization, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :specialization, 
            Lawyer.specializations.keys.map { |k| [k.titleize, k] },
            { include_blank: "Select specialization" },
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            required: true %>
      </div>

      <!-- Bar Association -->
      <div>
        <%= f.label :bar_association, "Bar Association", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :bar_association, 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "State Bar Association" %>
      </div>
    </div>

    <!-- Notes -->
    <div>
      <%= f.label :notes, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :notes, 
          rows: 4,
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
          placeholder: "Additional notes about the lawyer..." %>
    </div>

    <!-- Active Status -->
    <div class="flex items-center">
      <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :active, "Active (can be assigned to tasks)", class: "ml-2 block text-sm text-gray-700" %>
    </div>

    <!-- Form Actions -->
    <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
      <%= link_to "Cancel", @lawyer.persisted? ? admin_lawyer_path(@lawyer) : admin_lawyers_path, 
          class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" %>
      <%= f.submit @lawyer.persisted? ? "Update Lawyer" : "Create Lawyer", 
          class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition duration-200" %>
    </div>
  <% end %>
</div>
