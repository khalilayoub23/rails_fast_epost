<div class="mb-8">
  <div class="flex items-center gap-3 mb-2">
    <%= link_to admin_lawyer_path(@lawyer), class: "inline-flex items-center rounded-xl bg-white/10 p-2 text-white hover:bg-white/15" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
    <% end %>
    <h1 class="text-2xl font-bold text-white">Edit Lawyer</h1>
  </div>
  <p class="text-sm text-slate-400">Update information for <%= @lawyer.name %>.</p>
</div>

<div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
  <%= render "form", lawyer: @lawyer %>
</div>
