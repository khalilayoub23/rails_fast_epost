<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Lawyers</h1>
    <%= link_to "New Lawyer", new_admin_lawyer_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-200" %>
  </div>

  <!-- Search and Filters -->
  <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
    <%= form_with url: admin_lawyers_path, method: :get, class: "flex flex-wrap gap-4" do %>
      <div class="flex-1 min-w-[200px]">
        <%= text_field_tag :search, params[:search], 
            placeholder: "Search by name, email, or license...", 
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="min-w-[150px]">
        <%= select_tag :status, 
            options_for_select([["All Status", ""], ["Active", "active"], ["Inactive", "inactive"]], params[:status]),
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="min-w-[200px]">
        <%= select_tag :specialization,
            options_for_select([["All Specializations", ""]] + Lawyer.specializations.keys.map { |k| [k.titleize, k] }, params[:specialization]),
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex gap-2">
        <%= submit_tag "Search", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition duration-200" %>
        <%= link_to "Clear", admin_lawyers_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg transition duration-200" %>
      </div>
    <% end %>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Total Lawyers</div>
      <div class="text-2xl font-bold text-gray-900"><%= Lawyer.count %></div>
    </div>
    <div class="bg-green-50 rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-green-600">Active</div>
      <div class="text-2xl font-bold text-green-700"><%= Lawyer.active.count %></div>
    </div>
    <div class="bg-gray-50 rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-gray-500">Inactive</div>
      <div class="text-2xl font-bold text-gray-600"><%= Lawyer.inactive.count %></div>
    </div>
    <div class="bg-blue-50 rounded-lg shadow-sm p-4">
      <div class="text-sm font-medium text-blue-600">With Cases</div>
      <div class="text-2xl font-bold text-blue-700"><%= Lawyer.joins(:tasks).distinct.count %></div>
    </div>
  </div>

  <!-- Lawyers Table -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lawyer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">License</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specialization</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cases</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @lawyers.any? %>
          <% @lawyers.each do |lawyer| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                      <span class="text-blue-600 font-semibold"><%= lawyer.name.first %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900"><%= lawyer.name %></div>
                    <div class="text-sm text-gray-500"><%= lawyer.bar_association %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= lawyer.email %></div>
                <div class="text-sm text-gray-500"><%= lawyer.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-mono text-gray-900"><%= lawyer.license_number %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                  <%= lawyer.specialization.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= lawyer.tasks.count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if lawyer.active? %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Active
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end gap-2">
                  <%= link_to "View", admin_lawyer_path(lawyer), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_admin_lawyer_path(lawyer), class: "text-indigo-600 hover:text-indigo-900" %>
                  <%= link_to "Delete", admin_lawyer_path(lawyer), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center text-gray-500">
              <div class="text-lg mb-2">No lawyers found</div>
              <div class="text-sm">Try adjusting your search or filters</div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
