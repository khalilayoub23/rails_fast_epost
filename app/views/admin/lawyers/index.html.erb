<div class="mb-6 flex items-center justify-between gap-4">
  <div>
    <h1 class="text-2xl font-bold text-white">Lawyers</h1>
    <p class="mt-1 text-sm text-slate-400">Manage legal professionals and assignments.</p>
  </div>
  <%= link_to "New Lawyer", new_admin_lawyer_path, class: "inline-flex items-center rounded-xl bg-yellow-400 px-4 py-2 text-sm font-semibold text-black hover:bg-yellow-300 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
</div>

<div class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-xl shadow-black/30 backdrop-blur mb-6">
  <%= form_with url: admin_lawyers_path, method: :get, class: "grid grid-cols-1 md:grid-cols-6 gap-3" do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by name, email, or license...", class: "md:col-span-3 block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= select_tag :status, options_for_select([["All Status", ""], ["Active", "active"], ["Inactive", "inactive"]], params[:status]), class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <%= select_tag :specialization, options_for_select([["All Specializations", ""]] + Lawyer.specializations.keys.map { |k| [k.titleize, k] }, params[:specialization]), class: "block w-full rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm text-white focus:outline-none focus:ring-2 focus:ring-yellow-400/30" %>
    <div class="flex items-center gap-2">
      <%= submit_tag "Search", class: "w-full inline-flex items-center justify-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
      <%= link_to "Clear", admin_lawyers_path, class: "w-full inline-flex items-center justify-center rounded-xl bg-white/10 px-4 py-2 text-sm font-semibold text-white hover:bg-white/15" %>
    </div>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-xl shadow-black/30 backdrop-blur">
    <div class="text-xs font-semibold uppercase tracking-wide text-slate-300">Total</div>
    <div class="mt-2 text-2xl font-bold text-white"><%= Lawyer.count %></div>
  </div>
  <div class="rounded-2xl border border-white/10 bg-emerald-500/10 p-4 shadow-xl shadow-black/30 backdrop-blur">
    <div class="text-xs font-semibold uppercase tracking-wide text-emerald-200">Active</div>
    <div class="mt-2 text-2xl font-bold text-emerald-200"><%= Lawyer.active.count %></div>
  </div>
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-xl shadow-black/30 backdrop-blur">
    <div class="text-xs font-semibold uppercase tracking-wide text-slate-300">Inactive</div>
    <div class="mt-2 text-2xl font-bold text-slate-200"><%= Lawyer.inactive.count %></div>
  </div>
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4 shadow-xl shadow-black/30 backdrop-blur">
    <div class="text-xs font-semibold uppercase tracking-wide text-slate-300">With Cases</div>
    <div class="mt-2 text-2xl font-bold text-white"><%= Lawyer.joins(:tasks).distinct.count %></div>
  </div>
</div>

<div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-white/10">
      <thead class="bg-white/5">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Lawyer</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Contact</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">License</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Specialization</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Cases</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-slate-300">Status</th>
          <th class="px-6 py-3 text-right text-xs font-semibold uppercase tracking-wide text-slate-300">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/10">
        <% if @lawyers.any? %>
          <% @lawyers.each do |lawyer| %>
            <tr class="hover:bg-white/5">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-white/10 flex items-center justify-center">
                      <span class="text-white font-semibold"><%= lawyer.name.first %></span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-semibold text-white"><%= lawyer.name %></div>
                    <div class="text-sm text-slate-400"><%= lawyer.bar_association %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-slate-200"><%= lawyer.email %></div>
                <div class="text-sm text-slate-400"><%= lawyer.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-mono text-slate-200"><%= lawyer.license_number %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center rounded-full bg-white/10 px-2.5 py-1 text-xs font-semibold text-slate-200">
                  <%= lawyer.specialization.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-200"><%= lawyer.tasks.count %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if lawyer.active? %>
                  <span class="inline-flex items-center rounded-full bg-emerald-500/15 px-2.5 py-1 text-xs font-semibold text-emerald-200">Active</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-white/10 px-2.5 py-1 text-xs font-semibold text-slate-200">Inactive</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <div class="inline-flex items-center gap-2">
                  <%= link_to "View", admin_lawyer_path(lawyer), class: "inline-flex items-center rounded-lg bg-white/10 px-3 py-1.5 text-xs font-semibold text-white hover:bg-white/15" %>
                  <%= link_to "Edit", edit_admin_lawyer_path(lawyer), class: "inline-flex items-center rounded-lg bg-white/10 px-3 py-1.5 text-xs font-semibold text-white hover:bg-white/15" %>
                  <%= link_to "Delete", admin_lawyer_path(lawyer), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-flex items-center rounded-lg bg-red-500/15 px-3 py-1.5 text-xs font-semibold text-red-200 hover:bg-red-500/20" %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center text-slate-300">
              <div class="text-lg font-semibold text-white mb-2">No lawyers found</div>
              <div class="text-sm">Try adjusting your search or filters</div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
