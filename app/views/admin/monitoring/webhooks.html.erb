<div class="p-6">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Webhook Events</h1>
        <p class="mt-2 text-sm text-gray-600">Recent payment gateway updates and webhook events</p>
      </div>
      <%= link_to "← Back to Monitoring", admin_monitoring_path, class: "text-blue-600 hover:text-blue-800" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">External ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Updated</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_payments.each do |payment| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                #<%= payment.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded bg-<%= payment.provider == 'stripe' ? 'purple' : 'blue' %>-100 text-<%= payment.provider == 'stripe' ? 'purple' : 'blue' %>-800">
                  <%= payment.provider.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <code class="bg-gray-100 px-2 py-1 rounded text-xs"><%= payment.external_id&.truncate(20) || 'N/A' %></code>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <span class="font-semibold"><%= number_to_currency(payment.amount_cents / 100.0) %></span>
                <span class="text-gray-500 text-xs ml-1"><%= payment.currency&.upcase %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case payment.gateway_status %>
                <% when 'pending' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                    Pending
                  </span>
                <% when 'succeeded' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Succeeded
                  </span>
                <% when 'failed' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                    Failed
                  </span>
                <% when 'refunded' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    Refunded
                  </span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    <%= payment.gateway_status&.titleize %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= time_ago_in_words(payment.updated_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", payment_path(payment), class: "text-blue-600 hover:text-blue-800 mr-3" %>
                <% if payment.gateway_status == 'pending' %>
                  <%= button_to "Sync", sync_payment_path(payment), method: :post, class: "inline text-green-600 hover:text-green-800", form: { data: { turbo_confirm: "Sync this payment with #{payment.provider}?" } } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @recent_payments.empty? %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No recent webhook events</h3>
        <p class="mt-1 text-sm text-gray-500">No payment updates in the last 24 hours.</p>
      </div>
    <% end %>
  </div>

  <!-- Webhook Statistics -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm text-gray-600">Last Hour</p>
      <p class="text-2xl font-bold text-gray-900"><%= Payment.where("updated_at > ?", 1.hour.ago).count %></p>
      <p class="text-xs text-gray-500 mt-1">webhook events</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm text-gray-600">Last 24 Hours</p>
      <p class="text-2xl font-bold text-gray-900"><%= @recent_payments.count %></p>
      <p class="text-xs text-gray-500 mt-1">webhook events</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm text-gray-600">Success Rate</p>
      <% total = Payment.count %>
      <% success = Payment.where(gateway_status: :succeeded).count %>
      <p class="text-2xl font-bold text-green-600"><%= total > 0 ? ((success.to_f / total * 100).round(1)) : 0 %>%</p>
      <p class="text-xs text-gray-500 mt-1">of all payments</p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm text-gray-600">Pending</p>
      <p class="text-2xl font-bold text-yellow-600"><%= Payment.where(gateway_status: :pending).count %></p>
      <p class="text-xs text-gray-500 mt-1">awaiting confirmation</p>
    </div>
  </div>
</div>
