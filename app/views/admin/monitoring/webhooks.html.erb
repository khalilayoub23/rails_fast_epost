<div class="p-6">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-title-md2 font-bold text-white">Webhook Events</h1>
        <p class="mt-2 text-sm text-slate-300">Recent payment gateway updates and webhook events</p>
      </div>
      <%= link_to "â† Back to Monitoring", admin_monitoring_path, class: "text-sm text-slate-200 hover:text-white" %>
    </div>
  </div>

  <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-white/10">
        <thead class="bg-white/5">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">ID</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">External ID</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Amount</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Last Updated</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/10">
          <% @recent_payments.each do |payment| %>
            <tr class="hover:bg-white/5">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-white">
                #<%= payment.id %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded <%= payment.provider == 'stripe' ? 'bg-purple-500/15 text-purple-200' : 'bg-sky-500/15 text-sky-200' %>">
                  <%= payment.provider.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                <code class="rounded bg-white/10 px-2 py-1 text-xs text-slate-200"><%= payment.external_id&.truncate(20) || 'N/A' %></code>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                <span class="font-semibold"><%= number_to_currency(payment.amount_cents / 100.0) %></span>
                <span class="text-slate-400 text-xs ml-1"><%= payment.currency&.upcase %></span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% case payment.gateway_status %>
                <% when 'pending' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-500/15 text-yellow-200">
                    Pending
                  </span>
                <% when 'succeeded' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-emerald-500/15 text-emerald-200">
                    Succeeded
                  </span>
                <% when 'failed' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-500/15 text-red-200">
                    Failed
                  </span>
                <% when 'refunded' %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-white/10 text-slate-200">
                    Refunded
                  </span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-white/10 text-slate-200">
                    <%= payment.gateway_status&.titleize %>
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                <%= time_ago_in_words(payment.updated_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", payment_path(payment), class: "text-sky-300 hover:text-sky-200 mr-3" %>
                <% if payment.gateway_status == 'pending' %>
                  <%= button_to "Sync", sync_payment_path(payment), method: :post, class: "inline text-emerald-300 hover:text-emerald-200", form: { data: { turbo_confirm: "Sync this payment with #{payment.provider}?" } } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @recent_payments.empty? %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-semibold text-white">No recent webhook events</h3>
        <p class="mt-1 text-sm text-slate-300">No payment updates in the last 24 hours.</p>
      </div>
    <% end %>
  </div>

  <!-- Webhook Statistics -->
  <div class="mt-8 grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <p class="text-sm text-slate-300">Last Hour</p>
      <p class="text-2xl font-bold text-white"><%= Payment.where("updated_at > ?", 1.hour.ago).count %></p>
      <p class="text-xs text-slate-400 mt-1">webhook events</p>
    </div>

    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <p class="text-sm text-slate-300">Last 24 Hours</p>
      <p class="text-2xl font-bold text-white"><%= @recent_payments.count %></p>
      <p class="text-xs text-slate-400 mt-1">webhook events</p>
    </div>

    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <p class="text-sm text-slate-300">Success Rate</p>
      <% total = Payment.count %>
      <% success = Payment.where(gateway_status: :succeeded).count %>
      <p class="text-2xl font-bold text-emerald-300"><%= total > 0 ? ((success.to_f / total * 100).round(1)) : 0 %>%</p>
      <p class="text-xs text-slate-400 mt-1">of all payments</p>
    </div>

    <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl shadow-black/30 backdrop-blur">
      <p class="text-sm text-slate-300">Pending</p>
      <p class="text-2xl font-bold text-yellow-300"><%= Payment.where(gateway_status: :pending).count %></p>
      <p class="text-xs text-slate-400 mt-1">awaiting confirmation</p>
    </div>
  </div>
</div>
