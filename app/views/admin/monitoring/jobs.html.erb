<div class="p-6">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-title-md2 font-bold text-white">Background Jobs</h1>
        <p class="mt-2 text-sm text-slate-300">Monitor and manage Solid Queue background jobs</p>
      </div>
      <%= link_to "â† Back to Monitoring", admin_monitoring_path, class: "text-sm text-slate-200 hover:text-white" %>
    </div>
  </div>

  <% @jobs.each do |queue_name, jobs| %>
    <div class="rounded-2xl border border-white/10 bg-white/5 shadow-xl shadow-black/30 backdrop-blur mb-6">
      <div class="px-6 py-4 border-b border-white/10">
        <h2 class="text-lg font-semibold text-white">
          Queue: <%= queue_name %>
          <span class="ml-2 text-sm font-normal text-slate-400">(<%= jobs.count %> jobs)</span>
        </h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/10">
          <thead class="bg-white/5">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Class</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Finished</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-slate-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/10">
            <% jobs.first(20).each do |job| %>
              <tr class="hover:bg-white/5">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-white"><%= job.id %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">
                  <code class="rounded bg-white/10 px-2 py-1 text-slate-200"><%= job.class_name %></code>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if job.finished_at %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-emerald-500/15 text-emerald-200">
                      Completed
                    </span>
                  <% else %>
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-500/15 text-yellow-200">
                      Pending
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                  <%= time_ago_in_words(job.created_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-300">
                  <%= job.finished_at ? "#{time_ago_in_words(job.finished_at)} ago" : "-" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= link_to "Details", admin_monitoring_job_details_path(job.id), class: "text-sky-300 hover:text-sky-200" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <% if @jobs.empty? %>
    <div class="rounded-2xl border border-white/10 bg-white/5 p-12 text-center shadow-xl shadow-black/30 backdrop-blur">
      <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-white">No jobs found</h3>
      <p class="mt-1 text-sm text-slate-300">No background jobs have been queued yet.</p>
    </div>
  <% end %>
</div>
