<%= turbo_frame_tag customer do %>
  <tr class="hover:bg-white/5 transition-colors">
    <td class="px-6 py-4">
      <%= link_to customer_path(customer), class: "text-white font-semibold hover:text-yellow-300 transition-colors" do %>
        <%= customer.name %>
      <% end %>
    </td>
    <td class="px-6 py-4 text-slate-300">
      <%= customer.email %>
    </td>
    <td class="px-6 py-4">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-yellow-400/10 text-yellow-300 capitalize">
        <%= customer.category %>
      </span>
    </td>
    <td class="px-6 py-4 text-center">
      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-white/5 text-slate-200 text-sm font-semibold">
        <%= customer.tasks.size %>
      </span>
    </td>
    <td class="px-6 py-4">
      <div class="flex items-center justify-end gap-3">
        <%= link_to customer_path(customer), class: "p-2 text-slate-400 hover:text-yellow-300 hover:bg-white/5 rounded-lg transition-all", title: "View" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
        
        <%= link_to edit_customer_path(customer), data: { turbo_frame: dom_id(customer) }, class: "p-2 text-slate-400 hover:text-yellow-300 hover:bg-white/5 rounded-lg transition-all", title: "Edit" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        
        <%= button_to customer_path(customer), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this customer?" } }, class: "p-2 text-slate-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-all", title: "Delete" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </td>
  </tr>
<% end %>
