<% content_for :page_title, t("customers.edit_title", default: "Edit Customer") %>

<div class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-black py-10">
  <div class="container mx-auto max-w-4xl px-4">
    <div class="mb-6 flex flex-wrap items-center justify-between gap-3">
      <%= link_to customers_path, class: "inline-flex items-center text-sm font-semibold text-gray-300 hover:text-yellow-400" do %>
        <span class="material-icons mr-2 text-base">arrow_back</span>
        <%= t("common.back_to_list", default: "Back to customers") %>
      <% end %>
      <p class="text-xs font-semibold uppercase tracking-widest text-gray-500">ID <%= @customer.id %></p>
    </div>

    <div class="rounded-3xl border border-gray-800 bg-gray-900/70 shadow-2xl backdrop-blur">
      <div class="border-b border-gray-800 px-6 py-5">
        <h1 class="text-2xl font-bold text-white"><%= t("customers.edit_heading", default: "Update customer") %></h1>
        <p class="mt-2 text-sm text-gray-400"><%= t("customers.edit_subheading", default: "Keep contact information, legal addresses, and notification phones current.") %></p>
      </div>
      <div class="px-6 py-8">
        <%= render "form", customer: @customer %>
      </div>
    </div>
  </div>
</div>
