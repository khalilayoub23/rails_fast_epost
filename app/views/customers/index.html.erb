<% content_for :page_title, "Customers" %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <nav class="flex text-sm text-gray-500" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
              <span class="material-icons text-sm mr-1">home</span>
              Home
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <span class="material-icons text-sm text-gray-400 mx-1">chevron_right</span>
              <span class="text-gray-700 font-medium">Customers</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
    <%= link_to "New Customer", new_customer_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">All Customers</h2>
    </div>

    <% if @customers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tasks</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody id="customers" class="bg-white divide-y divide-gray-200">
            <% @customers.each do |customer| %>
              <tr id="<%= dom_id(customer) %>" class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to customer_path(customer), class: "text-sm font-medium text-blue-600 hover:text-blue-500" do %>
                    <%= customer.name %>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= customer.email %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 capitalize"><%= customer.category %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= customer.tasks.size %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to "View", customer_path(customer), class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <span class="material-icons text-gray-400 text-4xl mb-2">people</span>
        <h3 class="text-sm font-medium text-gray-900 mb-1">No customers</h3>
        <p class="text-sm text-gray-500">Get started by adding a new customer.</p>
        <%= link_to "New Customer", new_customer_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
