<% content_for :page_title, "Customers - Fastepost" %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white py-8">
  <%= turbo_stream_from "customers" %>
  
  <div class="container mx-auto px-4 max-w-7xl">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">Customers</h1>
          <nav class="flex items-center text-sm text-gray-400" aria-label="Breadcrumb">
            <%= link_to root_path, class: "hover:text-yellow-400 transition-colors" do %>
              <span class="inline-flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                Home
              </span>
            <% end %>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-yellow-400">Customers</span>
          </nav>
        </div>
        <%= link_to new_customer_path, class: "inline-flex items-center justify-center px-6 py-3 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transition-all shadow-lg hover:shadow-yellow-400/50 transform hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          New Customer
        <% end %>
      </div>
    </div>

    <!-- Main Content Card -->
    <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl border border-gray-700 shadow-2xl overflow-hidden">
      <!-- Search Section -->
      <div class="p-6 border-b border-gray-700">
        <%= form_with url: search_customers_path, method: :get, data: { turbo_frame: "customers_table", turbo_action: "advance" }, class: "flex flex-col sm:flex-row gap-3" do |f| %>
          <%= f.text_field :q, value: params[:q], placeholder: "Search customers by name...", class: "flex-1 px-4 py-3 bg-gray-900/50 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-transparent transition-all" %>
          <%= f.submit "Search", class: "px-6 py-3 bg-yellow-400 text-black font-bold rounded-lg hover:bg-yellow-500 transition-all cursor-pointer" %>
        <% end %>
      </div>

      <!-- Table Section -->
      <%= turbo_frame_tag "customers_table" do %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-900/50 border-b border-gray-700">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-yellow-400 uppercase tracking-wider">Name</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-yellow-400 uppercase tracking-wider">Email</th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-yellow-400 uppercase tracking-wider">Category</th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-yellow-400 uppercase tracking-wider">Tasks</th>
                <th class="px-6 py-4 text-right text-sm font-semibold text-yellow-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody id="customers_list" class="divide-y divide-gray-700">
              <%= render partial: "customers/customer_card", collection: @customers, as: :customer %>
            </tbody>
          </table>
          
          <% if @customers.empty? %>
            <div class="px-6 py-16 text-center">
              <svg class="mx-auto h-16 w-16 text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
              <h3 class="text-lg font-medium text-gray-300 mb-2">No customers found</h3>
              <p class="text-sm text-gray-400 mb-4">Get started by creating your first customer.</p>
              <%= link_to new_customer_path, class: "inline-flex items-center px-4 py-2 bg-yellow-400 text-black font-medium rounded-lg hover:bg-yellow-500 transition-all" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Create Customer
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
